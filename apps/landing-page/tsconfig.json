{
   "extends": "@tooling/typescript/astro.json",
   "compilerOptions": {
      "baseUrl": ".",
      "jsx": "react-jsx",
      "jsxImportSource": "react",
      "moduleResolution": "bundler",
      "paths": {
         "@/*": ["./src/*"],
         "@packages/ui/*": ["../../packages/ui/src/*"]
      }
   },
   "exclude": ["node_modules", "dist"],
   "include": [".astro/types.d.ts", "**/*.ts", "**/*.astro", "**/*.tsx"]
}
