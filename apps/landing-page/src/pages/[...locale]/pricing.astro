                           <p class="text-sm text-muted-foreground mb-4">{tier.description}</p>
                           <div class="flex items-baseline gap-1">
                              <span class="text-foreground text-4xl font-bold tracking-tighter">{tier.price}</span>
                              <span class="text-sm text-muted-foreground">{tier.period}</span>
                           </div>
