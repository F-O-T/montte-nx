                        <Lock class="w-4 h-4 text-muted-foreground group-hover:text-foreground" />
                        <span class="text-muted-foreground group-hover:text-foreground">Seguranca</span>
                     </a>
                  </nav>

                  <!-- Billing Toggle (Sidebar) -->
