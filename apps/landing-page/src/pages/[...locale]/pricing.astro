                  <!-- Two Tier Cards -->
                  <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
                     {collaborationFeatures.tiers.map((tier, index) => (
                        <div class={`rounded-xl border p-6 ${index === 1 ? 'border-primary/50 bg-card' : 'border-border bg-gradient-to-b from-card to-background'}`}>
