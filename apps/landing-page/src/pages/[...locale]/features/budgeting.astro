---
export const prerender = true;

import {
   ArrowRight,
   BarChart3,
   Bell,
   Calendar,
   Check,
   ChevronDown,
   ChevronRight,
   Github,
   Layers,
   LineChart,
   PiggyBank,
   RefreshCw,
   Shield,
   Smartphone,
   Target,
   TrendingUp,
   Users,
   Wallet,
   Zap,
} from "@lucide/astro";
import type { SupportedLng } from "@packages/localization";
import { Button } from "@packages/ui/components/button";
import LogoCloud from "@/components/LogoCloud.astro";
import StickyNavbar from "@/components/StickyNavbar.astro";
import { supportedLanguages } from "@/i18n/config";
import Layout from "@/layouts/Landing.astro";
import Footer from "@/sections/Footer.astro";

export function getStaticPaths() {
   return supportedLanguages.map((locale) => ({
      params: { locale: locale === "pt-BR" ? undefined : locale },
   }));
}

const { locale } = Astro.params;
const lang = (locale || "pt-BR") as SupportedLng;

const relatedFeatures = [
   {
      description: "Capture transacoes com IA e automacao",
      href: "/features/smart-transactions",
      title: "Transacoes Inteligentes",
   },
   {
      description: "Acompanhe contas a pagar e receber",
      href: "/features/bill-tracking",
      title: "Gestao de Contas",
   },
   {
      description: "Paineis e relatorios em tempo real",
      href: "/features/analytics",
      title: "Analises Financeiras",
   },
   {
      description: "Gerencie financas em equipe",
      href: "/features/collaboration",
      title: "Colaboracao",
   },
];

const testimonials = [
   {
      avatar: "https://api.dicebear.com/9.x/notionists/svg?seed=Juliana",
      name: "Juliana K.",
      quote: "Ja testei 5 apps de orcamento. Nenhum funcionou ate o Montte. As barras de progresso sao satisfatorias, e adoro ver as previsoes. Finalmente estou batendo minhas metas.",
      role: "Usuaria Individual",
      tag: "Financas Pessoais",
   },
   {
      avatar: "https://api.dicebear.com/9.x/notionists/svg?seed=Andre",
      name: "Andre & Marina",
      quote: "Meu parceiro e eu conseguimos ver o mesmo orcamento e trabalhar juntos nas nossas metas. Acabaram os gastos 'surpresa'. Transparencia total.",
      role: "Casal",
      tag: "Compartilhado",
   },
   {
      avatar: "https://api.dicebear.com/9.x/notionists/svg?seed=Carlos",
      name: "Carlos L.",
      quote: "Fazemos orcamento por projeto. O Montte facilita ver quais sao lucrativos e quais estao comendo a margem. Mudou nossa precificacao.",
      role: "Dono de Estudio",
      tag: "Pequena Empresa",
   },
];

const faqs = [
   {
      question: "Posso ajustar um orcamento no meio do mes?",
      answer:
         "Sim. Altere a meta a qualquer momento. O Montte recalcula instantaneamente e atualiza suas previsoes.",
   },
   {
      question: "O que acontece se eu estourar o orcamento?",
      answer:
         "Voce recebe um alerta, mas nao fica bloqueado. O Montte rastreia a variacao e mostra o motivo do estouro.",
   },
   {
      question: "Posso ter multiplos orcamentos para a mesma categoria?",
      answer:
         "Sim. Crie orcamentos separados como 'Mercado: R$ 300' e 'Restaurantes: R$ 150' dentro de Alimentacao.",
   },
   {
      question: "Como funciona o saldo acumulado?",
      answer:
         "No fim do mes, se voce tiver R$ 50 de orcamento nao usado, ele passa para o proximo mes (se ativado). Voce tera R$ 350 para gastar no proximo mes.",
   },
   {
      question: "Posso ver orcamentos de meses anteriores?",
      answer:
         "Sim. Veja orcado vs realizado de qualquer mes passado. Compare tendencias e evolucao ao longo do tempo.",
   },
   {
      question: "O Montte preve variacoes sazonais?",
      answer:
         "Sim. Se seus gastos de dezembro sao historicamente maiores, a previsao considera isso automaticamente.",
   },
];

const comparisonData = [
   { name: "Montte", price: "Gratis", highlight: true, width: "10%" },
   { name: "YNAB", price: "R$ 75/mes", width: "45%" },
   { name: "Mobills", price: "R$ 30/mes", width: "25%" },
   { name: "Organizze", price: "R$ 25/mes", width: "22%" },
];
---

<Layout lang={lang}>
   <div class="flex flex-col bg-background">
      <StickyNavbar lang={lang} />

      <!-- Hero Section -->
      <section class="relative mx-auto max-w-[1888px] w-full">
         <div class="absolute inset-0 bg-gradient-to-b from-primary/5 via-transparent to-transparent pointer-events-none" />

         <div class="container px-4 sm:px-6 pt-32 pb-10 md:pb-0 mx-auto flex flex-col items-center relative z-10">
            <h1 class="mt-5 md:mt-8 font-medium text-center text-[36px] md:text-[66px] max-w-[360px] md:max-w-[700px] leading-[110%] pb-2">
               <span class="bg-gradient-to-b from-foreground to-muted-foreground bg-clip-text text-transparent">
                  Orcamentos que
               </span>
               <span class="bg-linear-to-r from-primary via-chart-2 to-chart-3 bg-clip-text text-transparent">
                  {" "}realmente funcionam
               </span>
            </h1>
            <p class="mt-3 md:mt-5 text-center text-muted-foreground md:text-[20px] leading-[140%] max-w-[500px]">
               Defina metas. Acompanhe progresso em tempo real. Receba alertas antes de estourar. Open source e gratis para sempre.
            </p>

            <div class="px-3 sm:px-0">
               <div class="mt-10 w-full sm:w-auto">
                  <div class="flex flex-col sm:flex-row gap-3 items-center">
                     <a href="/signup" class="w-full max-w-[316px] sm:max-w-none sm:w-auto">
                        <Button size="lg" className="group relative overflow-hidden rounded-xl h-12 px-8 w-full sm:w-[220px] font-medium">
                           <span>Comece em 2 minutos</span>
                           <ArrowRight class="size-4 transition-transform duration-300 group-hover:translate-x-1" />
                        </Button>
                     </a>
                     <a href="https://github.com/montte/montte" target="_blank" rel="noopener noreferrer" class="w-full max-w-[316px] sm:max-w-none sm:w-auto">
                        <Button variant="outline" size="lg" className="rounded-xl h-12 px-6 gap-2 w-full sm:w-auto border-border/20 bg-muted/10 backdrop-blur-2xl">
                           <Github class="size-5" />
                           Auto-Hospedagem
                        </Button>
                     </a>
                  </div>

                  <p class="mt-5 pb-2 text-muted-foreground text-sm sm:text-base text-center">
                     Precisa de ajuda para configurar?{" "}
                     <a class="text-foreground underline underline-offset-4 transition decoration-primary/20 hover:decoration-primary" href="/book-demo">
                        Agende uma demonstracao
                     </a>
                  </p>
               </div>
            </div>
         </div>

         <!-- Hero Image -->
         <div class="mt-10 mx-auto flex justify-center max-w-[1700px] sm:-mb-10">
            <img
               width="393"
               height="596"
               class="w-full sm:hidden -mt-14 -mb-24"
               alt="Dashboard de orcamentos no mobile"
               src="https://placehold.co/393x596/0f0f23/22c55e?text=Budget+Mobile"
               loading="eager"
            />
            <img
               width="1730"
               height="662"
               class="hidden sm:block max-w-[800px] md:max-w-[1200px] lg:max-w-none"
               alt="Dashboard de orcamentos do Montte"
               src="https://placehold.co/1730x662/0f0f23/22c55e?text=Budget+Dashboard"
               loading="eager"
            />
         </div>
      </section>

      <!-- Logo Cloud -->
      <section class="relative mt-4 -mb-20 flex flex-col items-center overflow-hidden">
         <div class="mx-auto max-w-[1684px]">
            <p class="mb-4 md:mb-10 text-muted-foreground text-center text-base md:text-lg max-w-[200px] sm:max-w-none">
               Utilizado por familias e equipes em todo Brasil
            </p>
         </div>
         <div class="w-full max-w-[600px] mx-auto px-4">
            <LogoCloud client:load />
         </div>
      </section>

      <!-- Feature 1: Smart Budget Creation -->
      <section class="mt-32 relative z-10 container mx-auto scroll-mt-32 px-4 sm:px-6" id="create-budget">
         <div class="mx-auto flex flex-col items-center">
            <h2 class="mt-2 pb-2 bg-linear-to-r from-foreground to-foreground/70 bg-clip-text text-transparent font-bold text-center text-[28px] md:text-[40px] leading-[108%] max-w-[600px]">
               Crie orcamentos em segundos. Ajuste a qualquer momento.
            </h2>
            <p class="mt-3 text-muted-foreground text-center max-w-[450px] tracking-[-0.01em]">
               Configure por categoria, tag ou projeto. Defina valores fixos ou percentuais da renda. Tudo visual e intuitivo.
            </p>
            <a class="mt-5 px-4 py-2 flex items-center gap-2 text-sm rounded-full border border-border/20 bg-card text-muted-foreground hover:text-foreground hover:border-border/40 transition-colors" href="#progress-tracking">
               Ver acompanhamento em tempo real
               <ChevronRight class="w-3 h-3" />
            </a>
         </div>

         <div class="mt-12 mx-auto relative flex flex-col md:flex-row max-w-[900px] gap-6">
            <!-- Left Column -->
            <div class="flex-1 mt-10 md:mt-0 sm:w-[470px]">
               <div class="relative rounded-xl border border-border/20 bg-card overflow-hidden">
                  <img
                     width="687"
                     height="500"
                     alt="Interface de criacao de orcamentos"
                     class="w-full"
                     src="https://placehold.co/687x500/0f0f23/22c55e?text=Budget+Creation+UI"
                     loading="lazy"
                  />
               </div>
               <div class="mt-8 md:mt-12">
                  <h3 class="text-foreground font-bold text-[18px] md:text-[28px] leading-[117%]">
                     Multiplas dimensoes de orcamento
                  </h3>
                  <p class="mt-3 text-base text-muted-foreground md:text-lg max-w-[380px]">
                     Orcamentos por categoria, tag, projeto ou combinacoes aninhadas. Flexibilidade total para seu estilo de vida.
                  </p>
               </div>
            </div>

            <!-- Right Column -->
            <div class="flex-1 mt-8 md:mt-0 sm:w-[470px] space-y-6">
               <div class="relative p-6 md:p-8 rounded-xl border overflow-hidden border-border/20 bg-card">
                  <div class="absolute inset-0 bg-gradient-to-br from-primary/5 to-transparent pointer-events-none" />
                  <div class="relative z-10">
                     <div class="flex items-center gap-3 mb-4">
                        <div class="flex items-center justify-center w-10 h-10 rounded-xl bg-primary/10">
                           <Calendar class="w-5 h-5 text-primary" />
                        </div>
                        <h4 class="text-foreground font-medium">Periodos flexiveis</h4>
                     </div>
                     <p class="text-muted-foreground">
                        Mensal, trimestral, anual ou personalizado. O Montte se adapta ao seu ciclo financeiro.
                     </p>
                  </div>
               </div>

               <div class="relative p-6 md:p-8 rounded-xl border overflow-hidden border-border/20 bg-card">
                  <div class="absolute inset-0 bg-gradient-to-br from-primary/5 to-transparent pointer-events-none" />
                  <div class="relative z-10">
                     <div class="flex items-center gap-3 mb-4">
                        <div class="flex items-center justify-center w-10 h-10 rounded-xl bg-primary/10">
                           <Target class="w-5 h-5 text-primary" />
                        </div>
                        <h4 class="text-foreground font-medium">Metas dinamicas</h4>
                     </div>
                     <p class="text-muted-foreground">
                        Defina metas em reais ou percentuais. Se sua renda mudar, o orcamento ajusta automaticamente.
                     </p>
                  </div>
               </div>
            </div>
         </div>

         <!-- Feature Points Grid -->
         <div class="container mx-auto mt-16 md:mt-28 flex flex-col md:flex-row justify-center items-center md:items-start gap-12 md:gap-16">
            <div class="flex-1 max-w-[290px] text-center md:text-left">
               <div class="inline-flex items-center justify-center w-10 h-10 rounded-xl bg-primary/10 mb-4">
                  <Layers class="w-5 h-5 text-primary" />
               </div>
               <p class="text-foreground font-medium">Categorias aninhadas</p>
               <p class="mt-2 text-base text-muted-foreground">
                  Alimentacao > Mercado > Hortifruti. Organize seus gastos com a granularidade que precisar.
               </p>
            </div>
            <div class="flex-1 max-w-[290px] text-center md:text-left">
               <div class="inline-flex items-center justify-center w-10 h-10 rounded-xl bg-primary/10 mb-4">
                  <RefreshCw class="w-5 h-5 text-primary" />
               </div>
               <p class="text-foreground font-medium">Saldo acumulado</p>
               <p class="mt-2 text-base text-muted-foreground">
                  Orcamento nao usado passa para o proximo mes. Economize em fevereiro, gaste mais em marco.
               </p>
            </div>
            <div class="flex-1 max-w-[290px] text-center md:text-left">
               <div class="inline-flex items-center justify-center w-10 h-10 rounded-xl bg-primary/10 mb-4">
                  <Users class="w-5 h-5 text-primary" />
               </div>
               <p class="text-foreground font-medium">Orcamentos compartilhados</p>
               <p class="mt-2 text-base text-muted-foreground">
                  Casais e familias veem o mesmo orcamento. Transparencia total, sem surpresas.
               </p>
            </div>
         </div>

         <hr class="mt-24 md:mt-36 border-t border-border/20" />
      </section>

      <!-- Feature 2: Real-time Progress Tracking -->
      <section class="mt-24 md:mt-32 relative z-10 container mx-auto px-4 sm:px-6" id="progress-tracking">
         <div class="mx-auto flex flex-col items-center">
            <h2 class="mt-2 pb-2 bg-linear-to-r from-foreground to-foreground/70 bg-clip-text text-transparent font-bold text-center text-[28px] md:text-[40px] leading-[108%] max-w-[650px]">
               Acompanhe seu progresso visualmente. Em tempo real.
            </h2>
            <p class="mt-3 text-muted-foreground text-center max-w-[480px] tracking-[-0.01em]">
               Barras de progresso satisfatorias, dias restantes e projecoes automaticas. Saiba exatamente onde voce esta.
            </p>
            <a class="mt-5 px-4 py-2 flex items-center gap-2 text-sm rounded-full border border-border/20 bg-card text-muted-foreground hover:text-foreground hover:border-border/40 transition-colors" href="#alerts">
               Ver alertas inteligentes
               <ChevronRight class="w-3 h-3" />
            </a>
         </div>

         <div class="mt-12 mx-auto relative flex flex-col md:flex-row max-w-[900px] gap-6">
            <!-- Left Column -->
            <div class="flex-1 sm:w-[470px]">
               <div class="relative rounded-xl border border-border/20 bg-card overflow-hidden">
                  <img
                     width="687"
                     height="500"
                     alt="Barras de progresso de orcamento"
                     class="w-full"
                     src="https://placehold.co/687x500/0f0f23/22c55e?text=Progress+Bars"
                     loading="lazy"
                  />
               </div>
               <div class="mt-8 md:mt-12">
                  <h3 class="text-foreground font-bold text-[18px] md:text-[28px] leading-[117%]">
                     Visualizacao que motiva
                  </h3>
                  <p class="mt-3 text-base text-muted-foreground md:text-lg max-w-[380px]">
                     Barras coloridas mostram quanto voce gastou vs quanto pode gastar. Verde quando esta bem, amarelo quando precisa cuidar.
                  </p>
               </div>
            </div>

            <!-- Right Column -->
            <div class="flex-1 mt-8 md:mt-0 sm:w-[470px] space-y-6">
               <div class="relative p-6 md:p-8 rounded-xl border overflow-hidden border-border/20 bg-card">
                  <div class="absolute inset-0 bg-gradient-to-br from-primary/5 to-transparent pointer-events-none" />
                  <div class="relative z-10">
                     <div class="flex items-center gap-3 mb-4">
                        <div class="flex items-center justify-center w-10 h-10 rounded-xl bg-primary/10">
                           <LineChart class="w-5 h-5 text-primary" />
                        </div>
                        <h4 class="text-foreground font-medium">Previsoes precisas</h4>
                     </div>
                     <p class="text-muted-foreground">
                        Com base no seu ritmo de gastos, o Montte projeta se voce vai estourar ou sobrar no fim do mes.
                     </p>
                  </div>
               </div>

               <div class="relative p-6 md:p-8 rounded-xl border overflow-hidden border-border/20 bg-card">
                  <div class="absolute inset-0 bg-gradient-to-br from-primary/5 to-transparent pointer-events-none" />
                  <div class="relative z-10">
                     <div class="flex items-center gap-3 mb-4">
                        <div class="flex items-center justify-center w-10 h-10 rounded-xl bg-primary/10">
                           <TrendingUp class="w-5 h-5 text-primary" />
                        </div>
                        <h4 class="text-foreground font-medium">Analise de tendencias</h4>
                     </div>
                     <p class="text-muted-foreground">
                        Media movel, padroes sazonais e comparacao ano a ano. Entenda como seus gastos evoluem.
                     </p>
                  </div>
               </div>
            </div>
         </div>
      </section>

      <!-- Feature 3: Smart Alerts -->
      <div class="container mx-auto mt-24 md:mt-32 px-4 border-t border-border/20"></div>
      <section class="mt-24 md:mt-32 relative z-10 container mx-auto px-4 sm:px-6" id="alerts">
         <div class="mx-auto flex flex-col items-center">
            <h2 class="mt-2 pb-2 bg-linear-to-r from-foreground to-foreground/70 bg-clip-text text-transparent font-bold text-center text-[28px] md:text-[40px] leading-[108%]">
               Alertas antes de estourar
            </h2>
            <p class="mt-3 text-muted-foreground text-center max-w-[480px] tracking-[-0.01em]">
               Receba notificacoes em 75%, 90% e quando atingir 100%. Nunca mais seja pego de surpresa.
            </p>
         </div>

         <div class="mt-12 mx-auto relative flex flex-col md:flex-row max-w-[900px] gap-6">
            <!-- Left Column -->
            <div class="flex-1 sm:w-[470px]">
               <div class="relative rounded-xl border border-border/20 bg-card overflow-hidden">
                  <img
                     width="687"
                     height="500"
                     alt="Sistema de alertas de orcamento"
                     class="w-full"
                     src="https://placehold.co/687x500/0f0f23/22c55e?text=Budget+Alerts"
                     loading="lazy"
                  />
               </div>
               <div class="mt-8 md:mt-12">
                  <h3 class="text-foreground font-bold text-[18px] md:text-[28px] leading-[117%]">
                     Limiares personalizaveis
                  </h3>
                  <p class="mt-3 text-base text-muted-foreground md:text-lg max-w-[380px]">
                     Configure alertas em 50%, 80% ou qualquer valor. Escolha receber por email, push ou ambos.
                  </p>
               </div>
            </div>

            <!-- Right Column -->
            <div class="flex-1 mt-8 md:mt-0 sm:w-[470px] space-y-6">
               <div class="relative p-6 md:p-8 rounded-xl border overflow-hidden border-border/20 bg-card">
                  <div class="absolute inset-0 bg-gradient-to-br from-chart-4/10 to-transparent pointer-events-none" />
                  <div class="relative z-10">
                     <div class="flex items-center gap-3 mb-4">
                        <div class="flex items-center justify-center w-10 h-10 rounded-xl bg-chart-4/20">
                           <Bell class="w-5 h-5 text-chart-4" />
                        </div>
                        <h4 class="text-foreground font-medium">Notificacoes multicanal</h4>
                     </div>
                     <p class="text-muted-foreground">
                        E-mail, push no celular ou notificacao no app. Voce escolhe como quer ser avisado.
                     </p>
                  </div>
               </div>

               <div class="relative p-6 md:p-8 rounded-xl border overflow-hidden border-border/20 bg-card">
                  <div class="absolute inset-0 bg-gradient-to-br from-primary/5 to-transparent pointer-events-none" />
                  <div class="relative z-10">
                     <div class="flex items-center gap-3 mb-4">
                        <div class="flex items-center justify-center w-10 h-10 rounded-xl bg-primary/10">
                           <BarChart3 class="w-5 h-5 text-primary" />
                        </div>
                        <h4 class="text-foreground font-medium">Detalhamento do estouro</h4>
                     </div>
                     <p class="text-muted-foreground">
                        Quando estourar, veja exatamente quais transacoes causaram. Entenda o motivo e ajuste.
                     </p>
                  </div>
               </div>
            </div>
         </div>
      </section>

      <!-- Cost Comparison Section -->
      <section class="mt-32 md:mt-48 pb-16 md:pb-32 relative z-10 container mx-auto px-4 max-w-[1097px]">
         <div class="mx-auto flex gap-x-16 xl:gap-x-20 flex-col lg:flex-row md:items-start md:justify-between gap-y-10">
            <div class="max-lg:w-full">
               <div class="flex flex-col max-lg:text-center max-lg:items-center">
                  <h2 class="mt-2 lg:mt-10 pb-2 bg-gradient-to-b from-foreground to-muted-foreground bg-clip-text text-transparent font-bold text-[28px] md:text-[36px] leading-[108%] sm:max-w-[300px]">
                     Economize muito mais do que imagina
                  </h2>
                  <p class="mt-3 text-muted-foreground sm:max-w-[314px] tracking-[-0.01em] leading-[145%]">
                     O Montte e 100% gratuito e open source. Sem assinaturas. Sem custos ocultos. Para sempre.
                  </p>
                  <div class="mt-6">
                     <a class="inline-flex items-center justify-center bg-card border border-border/30 rounded-full text-muted-foreground px-3 text-sm h-9 hover:text-foreground group" href="/pricing">
                        <span class="leading-[100%]">Ver comparativo completo</span>
                        <ChevronRight class="ml-1.5 mt-px w-3 h-3 group-hover:text-foreground" />
                     </a>
                  </div>
                  <div class="mt-10 flex gap-x-14 gap-x-16 border-t pt-4 w-full border-border/30 max-lg:max-w-[400px] text-start max-lg:justify-center">
                     <div class="flex flex-col gap-y-1">
                        <p class="text-muted-foreground text-sm leading-[145%]">Economize ate</p>
                        <p class="text-[28px] text-foreground font-bold leading-[117%]">R$ 900/ano</p>
                        <p class="text-muted-foreground text-sm leading-[145%]">vs apps pagos</p>
                     </div>
                     <div class="flex flex-col gap-y-1">
                        <p class="text-muted-foreground text-sm leading-[145%]">ou</p>
                        <p class="text-[28px] text-foreground font-bold leading-[117%]">100%</p>
                        <p class="text-muted-foreground text-sm leading-[145%]">dos custos</p>
                     </div>
                  </div>
               </div>
            </div>

            <div class="border flex-1 border-border/30 rounded-[26px] p-2.5 w-full lg:max-w-[550px]">
               <div class="border rounded-t-xl bg-card border-border/30 w-full overflow-hidden">
                  <div class="px-5 py-4 bg-muted/30 text-base leading-[145%] text-foreground font-medium">
                     <p>Custo anual para gerenciar orcamentos pessoais</p>
                  </div>
               </div>
               <div class="rounded-b-xl border border-border/30 bg-card border-t-0 flex flex-col">
                  {comparisonData.map((item) => (
                     <div class="py-4 not-last:border-b border-border/30">
                        <div class="px-6 space-y-3">
                           <div class="flex items-center w-full justify-between">
                              <div class="flex items-center gap-x-2">
                                 {item.highlight ? (
                                    <div class="w-5 h-5 rounded-full flex items-center justify-center bg-linear-to-r from-primary to-chart-2 shrink-0">
