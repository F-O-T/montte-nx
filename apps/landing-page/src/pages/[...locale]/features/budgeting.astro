const relatedFeatures = [
   {
      description: "Transações alimentam o cálculo do orçamento",
      href: "/features/smart-transactions",
      title: "Capture Todas as Transações",
   },
   {
      description: "Dados do orçamento nos relatórios financeiros",
      href: "/features/analytics",
      title: "Entenda Seu Dinheiro",
   },
   {
      description: "Contas consideradas no planejamento",
      href: "/features/bill-tracking",
      title: "Contas Sem Estresse",
   },
   {
      description: "Orçamentos em equipe para gastos compartilhados",
      href: "/features/collaboration",
