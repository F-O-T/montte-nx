---
export const prerender = true;

import {
   ArrowRight,
   ChevronDown,
   ChevronRight,
   Code2,
   CpuIcon,
   FileJson,
   GitBranch,
   Github,
   Heart,
   LinkIcon,
   Lock,
   MessageCircle,
   Server,
   Shield,
   ShieldCheck,
   Users,
} from "@lucide/astro";
import type { SupportedLng } from "@packages/localization";
import { Button } from "@packages/ui/components/button";
import StickyNavbar from "@/components/StickyNavbar.astro";
import { supportedLanguages } from "@/i18n/config";
import Layout from "@/layouts/Landing.astro";
import Footer from "@/sections/Footer.astro";

export function getStaticPaths() {
   return supportedLanguages.map((locale) => ({
      params: { locale: locale === "pt-BR" ? undefined : locale },
   }));
}

const { locale } = Astro.params;
const lang = (locale || "pt-BR") as SupportedLng;

const scaleFeatures = [
   {
      title: "Transparência radical no código",
      description:
         "Cada linha de código está aberta no GitHub. Audite, verifique e confie. Sem módulos proprietários ou funcionalidades escondidas.",
      bgClass:
         "bg-gradient-to-br from-primary/10 via-transparent to-transparent",
   },
   {
      title: "Hospede onde quiser",
      description:
         "Docker, Vercel, Railway, AWS ou seu próprio servidor. Com 13 meses de retenção padrão para todos os dados.",
      bgClass:
         "bg-gradient-to-br from-chart-2/10 via-transparent to-transparent",
   },
];

const selfHostOptions = [
   { name: "Docker Compose", time: "5 min" },
   { name: "Vercel", time: "2 min" },
   { name: "Railway", time: "1-click" },
   { name: "VPS", time: "30 min" },
   { name: "Raspberry Pi", time: "15 min" },
];

const troubleshootFeatures = [
   {
      title: "Exporte seus dados a qualquer momento",
      description:
         "JSON, CSV, OFX, IIF e PDF. Seus dados são seus. Sem amarras, sem formatos proprietários.",
   },
   {
      title: "API aberta e extensível",
      description:
         "Crie integrações personalizadas, automatize com webhooks e estenda funcionalidades com plugins (em breve).",
   },
];

const resolveFeatures = [
   {
      title: "Licença Apache 2.0",
      description:
         "Use para fins pessoais ou empresariais. Modifique e redistribua livremente. Proteção de patentes incluída.",
      icon: "Shield",
   },
   {
      title: "Comunidade ativa",
      description:
         "GitHub Discussions, Discord, contribuições de código e traduções. O roadmap é moldado pela comunidade.",
      icon: "Users",
   },
];

const enterpriseFeatures = [
   {
      icon: "CpuIcon",
      title: "Escalável de forma confiável",
      description:
         "Gerencie milhares de transações por dia. Performance consistente mesmo com picos de uso e crescimento.",
   },
   {
      icon: "ShieldCheck",
      title: "Seguro e auditável",
      description:
         "Código aberto significa que você pode auditar cada linha. TypeScript strict, testes abrangentes e melhores práticas de segurança.",
   },
   {
      icon: "MessageCircle",
      title: "Suporte técnico especializado",
      description:
         "Nossa equipe de suporte técnico está aqui para ajudar. Do onboarding à integração, sem bots, apenas engenheiros talentosos.",
   },
];

const faqs = [
   {
      question: "O Montte é realmente gratuito e open source?",
      answer:
         "Sim. 100% gratuito e open source (Apache 2.0). A versão cloud é um serviço pago opcional.",
   },
   {
      question: "Posso modificar o Montte para minhas necessidades?",
      answer:
         "Sim. Você pode fazer fork, modificar e usar para qualquer finalidade (a licença Apache 2.0 permite).",
   },
   {
      question: "Preciso contribuir com código?",
      answer:
         "Não. Você pode simplesmente usar. Contribuições são voluntárias e sempre bem-vindas.",
   },
   {
      question: "E o suporte para auto-hospedado?",
      answer:
         "O suporte da comunidade é gratuito. Suporte premium está disponível (Enterprise).",
   },
   {
      question: "Posso usar o Montte na minha empresa?",
      answer: "Sim. A licença Apache 2.0 permite uso comercial.",
   },
   {
      question: "A versão cloud é diferente da auto-hospedada?",
      answer:
         "Não. O código é o mesmo. A versão cloud é hospedada e mantida por nós. Auto-hospedado é por sua conta.",
   },
];
---

<Layout lang={lang}>
   <style>
      .title-gradient-text {
         background: linear-gradient(90deg, oklch(0.7729 0.1535 163.2231), oklch(0.7845 0.1325 181.9120));
         -webkit-background-clip: text;
         background-clip: text;
      }
      .homepage-heading-gradient {
         background: linear-gradient(180deg, #fff 30%, rgba(255, 255, 255, 0.6) 100%);
         -webkit-background-clip: text;
         background-clip: text;
         color: transparent;
      }
      .logs-text {
         background: linear-gradient(90deg, oklch(0.7729 0.1535 163.2231) 0%, oklch(0.7845 0.1325 181.9120) 50%, oklch(0.7729 0.1535 163.2231) 100%);
         -webkit-background-clip: text;
         background-clip: text;
      }
      .bg-hero-flare {
         background: radial-gradient(ellipse 80% 50% at 50% -20%, oklch(0.7729 0.1535 163.2231 / 0.15), transparent);
      }
      .bg-cta-flare {
         background: radial-gradient(ellipse 80% 50% at 50% 100%, oklch(0.7729 0.1535 163.2231 / 0.10), transparent);
      }
      .border-separator-gradient {
         border-image: linear-gradient(90deg, transparent, oklch(0.4461 0.0263 256.8018 / 0.5), transparent) 1;
      }
      .card-glass {
         background: oklch(0.2795 0.0368 260.0310 / 0.8);
         backdrop-filter: blur(12px);
         border: 1px solid oklch(0.4461 0.0263 256.8018 / 0.2);
      }
      .cta-button {
         background: linear-gradient(135deg, oklch(0.7729 0.1535 163.2231), oklch(0.6959 0.1491 162.4796));
         border-radius: 0.5rem;
         transition: all 0.2s ease;
      }
      .cta-button:hover {
         filter: brightness(1.1);
         transform: translateY(-1px);
      }
      @keyframes scroll-left {
         0% { transform: translateX(0); }
         100% { transform: translateX(-50%); }
      }
      .customers-scroll {
         animation: scroll-left 30s linear infinite;
      }
      .customers-scroll:hover {
         animation-play-state: paused;
      }
      .mask-gradient-to-l {
         mask-image: linear-gradient(to left, black, transparent);
         -webkit-mask-image: linear-gradient(to left, black, transparent);
      }
      .mask-gradient-to-r {
         mask-image: linear-gradient(to right, black, transparent);
         -webkit-mask-image: linear-gradient(to right, black, transparent);
      }
   </style>

   <div class="flex flex-col dark bg-background text-foreground">
      <StickyNavbar lang={lang}/>

      <!-- Hero Section -->
      <section class="relative mx-auto bg-hero-flare max-w-[1888px] w-full">
         <div class="container px-4 sm:px-6 pt-36 md:pt-40 -mb-10 md:mb-0 mx-auto flex flex-col items-center relative z-10">
            <p class="title-gradient-text text-transparent text-sm sm:text-base uppercase font-bold text-center tracking-[0.29em]">
               Audite. Hospede. Controle.
            </p>
            <h1 class="mt-5 md:mt-8 homepage-heading-gradient font-medium text-center text-4xl md:text-6xl lg:text-7xl leading-[110%] max-w-[800px]">
               Você não precisa confiar em
               <span class="leading-[110%] sm:leading-[120%]">apps financeiros fechados</span>
            </h1>
            <p class="mt-2 md:mt-4 text-center text-lg md:text-xl leading-[140%] max-w-[500px] text-muted-foreground">
               100% open source. Código auditável. Seus dados, seu servidor, suas regras.
            </p>
            <div class="mt-10 w-full sm:w-auto flex flex-col sm:flex-row gap-3 items-center">
               <a href="https://github.com/montte/montte" target="_blank" rel="noopener noreferrer" class="w-full sm:w-auto max-w-[316px]">
                  <button class="cta-button px-6 flex items-center justify-center gap-2 text-white font-medium whitespace-nowrap h-12 w-full sm:w-auto">
                     <Github class="size-5" />
                     Ver no GitHub
                  </button>
               </a>
               <a href="/self-host-guide" class="w-full sm:w-auto max-w-[316px]">
                  <Button variant="outline" size="lg" className="rounded-lg h-12 px-6 gap-2 w-full border-border/20 bg-muted/10 hover:bg-muted/20">
                     <Server class="size-5" />
                     Fazer Deploy Agora
                  </Button>
               </a>
            </div>
            <p class="mt-5 pb-2 text-muted-foreground text-sm sm:text-base text-center">
               Comece gratis ou
               <a class="text-foreground underline underline-offset-4 transition decoration-muted-foreground/30 hover:decoration-foreground" href="/contact">
                  agende uma demo
               </a>
            </p>
         </div>

         <div class="relative md:mt-16">
            <div class="absolute z-10 bottom-0 left-0 right-0 h-40 bg-gradient-to-t from-background via-background"></div>
            <div class="flex justify-center px-4">
               <img
                  width="1260"
                  height="636"
                  class="max-w-5xl w-full rounded-t-xl border border-border/20 shadow-2xl"
                  src="https://placehold.co/1260x636/1a1b2e/22c55e?text=Dashboard+Preview"
                  alt="Preview do dashboard Montte"
                  loading="eager"
               />
            </div>
         </div>
      </section>

      <!-- Social Proof Scroll -->
      <div class="relative -mt-16 z-20">
         <section class="relative mt-4 -mb-20 flex flex-col items-center overflow-hidden">
            <div class="mx-auto max-w-[1684px]">
               <p class="mb-4 md:mb-10 text-muted-foreground text-center text-base md:text-lg max-w-[200px] sm:max-w-none">
                  Confiado por desenvolvedores e empresas em todo o mundo
               </p>
            </div>
            <div class="scale-75 md:scale-100 flex overflow-hidden">
               <div class="customers-scroll flex justify-center gap-12 px-6">
                  <div class="flex items-center gap-12 text-muted-foreground/60">
                     <span class="text-lg font-semibold whitespace-nowrap">5.000+ deploys</span>
                     <span class="text-2xl">·</span>
                     <span class="text-lg font-semibold whitespace-nowrap">15.000+ estrelas</span>
                     <span class="text-2xl">·</span>
                     <span class="text-lg font-semibold whitespace-nowrap">500+ contribuidores</span>
                     <span class="text-2xl">·</span>
                     <span class="text-lg font-semibold whitespace-nowrap">Apache 2.0</span>
                     <span class="text-2xl">·</span>
                     <span class="text-lg font-semibold whitespace-nowrap">100% Transparente</span>
                     <span class="text-2xl">·</span>
                  </div>
                  <div class="flex items-center gap-12 text-muted-foreground/60" aria-hidden="true">
                     <span class="text-lg font-semibold whitespace-nowrap">5.000+ deploys</span>
                     <span class="text-2xl">·</span>
                     <span class="text-lg font-semibold whitespace-nowrap">15.000+ estrelas</span>
                     <span class="text-2xl">·</span>
                     <span class="text-lg font-semibold whitespace-nowrap">500+ contribuidores</span>
                     <span class="text-2xl">·</span>
                     <span class="text-lg font-semibold whitespace-nowrap">Apache 2.0</span>
                     <span class="text-2xl">·</span>
                     <span class="text-lg font-semibold whitespace-nowrap">100% Transparente</span>
                     <span class="text-2xl">·</span>
                  </div>
               </div>
            </div>
            <div class="absolute inset-0 flex justify-center pointer-events-none">
               <div class="grow h-full bg-linear-to-r from-background md:from-50%"></div>
               <div class="min-w-[200px] md:min-w-[1000px]"></div>
               <div class="grow h-full bg-gradient-to-l from-background md:from-50%"></div>
            </div>
         </section>
      </div>

      <!-- Scale Section -->
      <section class="mx-auto relative z-10 mt-16 md:mt-28 mb-28 md:mb-42 px-4 sm:px-6">
         <div class="container mx-auto flex flex-col items-center">
            <div class="uppercase text-sm font-bold title-gradient-text text-transparent leading-[121%] tracking-[0.045em]">
               Transparência
            </div>
            <h2 class="mt-2 pb-2 logs-text text-transparent font-bold text-center text-3xl md:text-4xl lg:text-5xl leading-[108%]">
               Código aberto, custos controlados
            </h2>
            <p class="mt-3 mb-8 text-muted-foreground text-center max-w-[520px] tracking-[-0.01em] text-lg">
               Montte oferece gestão financeira completa com código 100% auditável, sem taxas ocultas ou algoritmos de caixa preta.
            </p>
         </div>

         <div class="container mx-auto mt-12 flex gap-5 flex-col items-center md:flex-row max-w-[1000px]">
            {scaleFeatures.map((feature) => (
               <div class={`flex-1 pl-7 pr-5 py-8 flex flex-col justify-end border rounded-xl min-h-[294px] max-w-[470px] lg:min-w-[470px] border-border/20 card-glass ${feature.bgClass}`}>
                  <h3 class="text-foreground font-medium text-lg">{feature.title}</h3>
                  <p class="mt-1 text-muted-foreground">
                     {feature.description}
                  </p>
               </div>
            ))}
         </div>

         <div class="relative mx-auto flex flex-col items-center max-w-[1000px] mt-16">
            <div class="grid md:grid-cols-2 gap-8 w-full">
               <div class="relative z-10 w-full">
                  <div class="text-muted-foreground">Até</div>
                  <div class="my-1 text-foreground font-bold text-3xl md:text-4xl">Gratuito para sempre</div>
                  <div class="text-muted-foreground">auto-hospedado</div>
                  <div class="mt-4 text-base text-muted-foreground">
                     Habilitado por uma arquitetura moderna e eficiente com TypeScript, PostgreSQL e código limpo.
                  </div>
               </div>
               <div class="relative z-10 w-full">
                  <div class="flex items-center gap-2 text-foreground font-bold text-xl">
                     <Lock class="w-5 h-5" />
                     Seguro
                  </div>
                  <div class="mt-3 text-base text-muted-foreground">
                     Controle custos e uso enquanto gerencia armazenamento e acesso aos dados. Mantenha-se seguro com código auditável e melhores práticas de segurança.
                  </div>
                  <div class="mt-5 flex items-center gap-3">
                     <div class="flex justify-center items-center rounded-full border w-[30px] h-[30px] bg-card border-border/20">
                        <Shield class="w-4 h-4 text-primary" />
                     </div>
                     <span class="text-muted-foreground">Apache 2.0</span>
                  </div>
                  <div class="mt-3 flex items-center gap-3">
                     <div class="flex justify-center items-center rounded-full border w-[30px] h-[30px] bg-card border-border/20">
                        <Code2 class="w-4 h-4 text-primary" />
                     </div>
                     <span class="text-muted-foreground">TypeScript Strict</span>
                  </div>
               </div>
            </div>
         </div>
      </section>

      <hr class="border-t border-separator-gradient mx-4" />

      <!-- Integration Section -->
      <section class="container mx-auto pt-16 pb-12 flex flex-col items-center px-4 sm:px-6">
         <h2 class="mt-2 pb-2 text-foreground font-bold text-center text-xl md:text-3xl leading-[117%]">
            Deploy em minutos, controle para sempre
         </h2>
         <p class="mt-1 text-center max-w-[427px] text-muted-foreground">
            Comece em minutos usando suas plataformas favoritas. Escolha o método que funciona melhor para você.
         </p>
         <a class="mt-6 px-4 py-2 flex items-center gap-2 text-sm rounded-full border border-border/20 bg-card text-muted-foreground hover:brightness-110 transition" href="/docs/self-hosting">
            Ver documentação
            <ChevronRight class="mt-[1px] w-3 h-3" />
         </a>
         <div class="mt-10 flex flex-wrap justify-center gap-4">
            {selfHostOptions.map((option) => (
               <div class="px-4 py-2 rounded-lg border border-border/20 bg-card/50 text-center">
                  <div class="text-foreground font-medium">{option.name}</div>
                  <div class="text-xs text-primary">{option.time}</div>
               </div>
            ))}
         </div>
      </section>

      <hr class="border-t border-separator-gradient mx-4" />

      <!-- Troubleshoot Section -->
      <section class="mt-36 relative z-10 container mx-auto px-4 sm:px-6">
         <div class="mx-auto flex flex-col items-center">
            <div class="uppercase text-sm font-bold title-gradient-text text-transparent leading-[121%] tracking-[0.045em]">
               Liberdade
            </div>
            <h2 class="mt-2 pb-2 logs-text text-transparent font-bold text-center text-3xl md:text-4xl lg:text-5xl leading-[108%] max-w-[475px]">
               Seus dados, sua escolha
            </h2>
            <p class="mt-3 mb-8 text-muted-foreground text-center max-w-[441px] tracking-[-0.01em] text-lg">
               Zero vendor lock-in. Exporte seus dados a qualquer momento. Mude de ideia? Leve tudo com você.
            </p>
         </div>

         <div class="mx-auto relative mt-6 flex flex-col md:flex-row gap-6 max-w-[900px]">
            <div class="flex-1 sm:w-[470px]">
               <div class="rounded-xl border border-border/20 overflow-hidden card-glass">
                  <img
                     width="654"
                     height="400"
                     alt="Exportação de dados"
                     class="w-full"
                     src="https://placehold.co/654x400/1a1b2e/22c55e?text=Data+Export"
                     loading="lazy"
                  />
               </div>
               <div class="mt-6">
                  <h3 class="text-foreground font-bold text-xl md:text-2xl leading-[117%]">
                     Exporte quando quiser
                  </h3>
                  <p class="mt-3 text-base md:text-lg text-muted-foreground max-w-[342px]">
                     JSON, CSV, OFX, IIF e PDF. Formatos padrão da indústria. Sem formatos proprietários que prendem seus dados.
                  </p>
               </div>
            </div>

            <div class="flex-1 mt-12 md:mt-0 sm:w-[470px] flex flex-col gap-4">
               <div class="relative mt-4 px-9 py-6 rounded-xl border overflow-hidden border-border/20 card-glass">
                  <div class="flex items-center gap-3 mb-4">
                     <div class="flex items-center justify-center w-10 h-10 rounded-xl bg-primary/10">
                        <FileJson class="w-5 h-5 text-primary" />
                     </div>
                     <h4 class="text-foreground font-medium">
                        Formatos padrão da indústria
                     </h4>
                  </div>
                  <p class="text-muted-foreground">
                     Exporte para JSON, CSV (planilhas), OFX (bancos), IIF (contabilidade) ou PDF (relatórios).
                  </p>
               </div>

               <div class="px-9 py-6 rounded-xl border border-border/20 card-glass">
                  <div class="flex items-center gap-3 mb-4">
                     <div class="flex items-center justify-center w-10 h-10 rounded-xl bg-primary/10">
                        <LinkIcon class="w-5 h-5 text-primary" />
                     </div>
                     <h4 class="text-foreground font-medium">
                        API aberta e webhooks
                     </h4>
                  </div>
                  <p class="text-muted-foreground">
                     Integre com qualquer serviço. Automatize fluxos de trabalho. Crie suas próprias extensões sem limitações.
                  </p>
               </div>

               <div class="px-9 py-6 rounded-xl border border-border/20 card-glass">
                  <div class="flex items-center gap-3 mb-4">
                     <div class="flex items-center justify-center w-10 h-10 rounded-xl bg-primary/10">
                        <Heart class="w-5 h-5 text-primary" />
                     </div>
                     <h4 class="text-foreground font-medium">
                        Sem armadilhas
                     </h4>
                  </div>
                  <p class="text-muted-foreground">
                     Sem contratos longos. Cobrança mensal. Cancele quando quiser. Auto-hospedado é sempre gratuito.
                  </p>
               </div>
            </div>
         </div>

         <hr class="mt-36 border-t border-separator-gradient" />
      </section>

      <!-- Resolve Section -->
      <section class="mt-24 md:mt-28 lg:mt-32 relative z-10 container mx-auto flex flex-col items-center px-4 sm:px-6">
         <div>
            <p class="title-gradient-text text-transparent text-sm uppercase font-bold text-center">
               Comunidade
            </p>
            <h2 class="mt-5 pb-2 logs-text text-transparent font-bold text-center text-3xl md:text-4xl lg:text-5xl leading-[108%] max-w-[475px]">
               Construído pela comunidade, para a comunidade
            </h2>
            <p class="mt-3 mb-8 text-center max-w-[443px] tracking-[-0.01em] text-muted-foreground text-lg mx-auto">
               Contribua com código, reporte bugs, traduza para outros idiomas. O roadmap é moldado por quem usa.
            </p>
         </div>

         <div class="mt-10 md:mt-16 lg:mt-20 flex flex-col-reverse lg:flex-row gap-5 lg:max-w-[1000px]">
            <div class="relative flex-1 flex flex-col justify-end rounded-xl border overflow-hidden card-glass border-border/20 max-w-[470px] lg:w-[470px] min-h-[363px]">
               <div class="p-8 pt-32 bg-gradient-to-t from-card via-card/80 to-transparent">
                  <div class="flex items-center gap-3 mb-2">
                     <Shield class="w-5 h-5 text-primary" />
                     <h4 class="font-medium text-foreground">
                        Licença Apache 2.0
                     </h4>
                  </div>
                  <p class="mt-1 text-muted-foreground">
                     Use para fins pessoais ou empresariais. Modifique e redistribua livremente. Proteção de patentes incluída.
                  </p>
               </div>
            </div>

            <div class="relative flex-1 flex flex-col justify-end rounded-xl border card-glass border-border/20 max-w-[470px] lg:w-[470px] min-h-[363px]">
               <div class="p-8 pt-32 bg-gradient-to-t from-card via-card/80 to-transparent">
                  <div class="flex items-center gap-3 mb-2">
                     <Users class="w-5 h-5 text-primary" />
                     <h4 class="font-medium text-foreground">
                        Roadmap transparente e colaborativo
                     </h4>
                  </div>
                  <p class="mt-1 text-muted-foreground">
                     Issues públicas no GitHub. Votação da comunidade. Discussões de design abertas. Planejamento com a comunidade.
                  </p>
               </div>
            </div>
         </div>

         <div class="mt-8 flex flex-wrap justify-center gap-4">
            <a href="https://github.com/montte/montte" target="_blank" rel="noopener noreferrer" class="px-4 py-2 flex items-center gap-2 text-sm rounded-full border border-border/20 bg-card text-muted-foreground hover:text-foreground transition">
               <Github class="w-4 h-4" />
               GitHub
            </a>
            <a href="/discord" class="px-4 py-2 flex items-center gap-2 text-sm rounded-full border border-border/20 bg-card text-muted-foreground hover:text-foreground transition">
               <MessageCircle class="w-4 h-4" />
               Discord
            </a>
            <a href="https://github.com/montte/montte/blob/main/CONTRIBUTING.md" target="_blank" rel="noopener noreferrer" class="px-4 py-2 flex items-center gap-2 text-sm rounded-full border border-border/20 bg-card text-muted-foreground hover:text-foreground transition">
               <GitBranch class="w-4 h-4" />
               Contribuir
            </a>
         </div>
      </section>

      <div class="my-16 md:mt-48 mx-auto max-w-[1320px] border-border/15 border-t"></div>

