---
export const prerender = true;

import type { SupportedLng } from "@packages/localization";
import { supportedLanguages } from "@/i18n/config";

export function getStaticPaths() {
   return supportedLanguages.map((locale) => ({
      params: { locale: locale === "pt-BR" ? undefined : locale },
   }));
}

const { locale } = Astro.params;
const _lang = (locale || "pt-BR") as SupportedLng;

const _comparisonData = [
   { name: "Montte", price: "Gratis", width: "16.67%", highlight: true },
   { name: "Splitwise", price: "R$49/mes", width: "50%" },
   { name: "Toshl Finance", price: "R$99/mes", width: "100%" },
];
---

<Layout lang={lang}>
   <div class="flex flex-col bg-background dark:bg-[#0B0C14]">
      <StickyNavbar lang={lang}/>

      <!-- Hero Section -->
      <section class="relative mx-auto w-full">
         <div class="container px-4 sm:px-6 pt-24 md:pt-32 pb-16 mx-auto flex flex-col items-center relative z-10">
            <h1 class="mt-5 bg-gradient-to-b from-foreground to-muted-foreground bg-clip-text text-transparent font-bold text-center md:mt-8 text-[32px] md:text-[56px] lg:text-[66px] max-w-[320px] md:max-w-[744px] leading-[100%] pb-2">
               Colabore nas Financas Sem Perder o Controle
            </h1>
            <p class="text-center text-muted-foreground mt-4 md:text-lg lg:text-xl leading-[140%] max-w-[280px] md:max-w-[500px]">
               Gerencie financas em equipe com controle granular.
               <br class="hidden sm:block" />
               Gratuito para equipes de ate 3 pessoas.
            </p>
            <div class="px-3 sm:px-0 flex w-full justify-center">
               <div class="mt-8 w-full sm:w-auto flex flex-col sm:flex-row gap-3 items-center">
