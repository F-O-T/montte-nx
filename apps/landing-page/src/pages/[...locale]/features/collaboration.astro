                        <p class="text-[28px] text-foreground font-bold leading-[117%]">
                           3 membros
                        </p>
                        <p class="text-muted-foreground text-sm leading-[145%]">
                           sem limitacoes
                        </p>
                     </div>
                  </div>
               </div>
            </div>
            <div class="border flex-1 border-border/20 rounded-2xl p-2.5 w-full lg:max-w-[550px] bg-card/50">
