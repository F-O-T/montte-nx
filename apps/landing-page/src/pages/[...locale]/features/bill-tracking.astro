---
export const prerender = true;

import {
   AlertCircle,
   ArrowRight,
   Bell,
   Calculator,
   CalendarClock,
   ChartNoAxesCombined,
   Check,
   CheckCircle2,
   ChevronDown,
   ChevronRight,
   Clock,
   FileText,
   Globe,
   LinkIcon,
   Repeat,
   ScrollText,
   Zap,
} from "@lucide/astro";
import type { SupportedLng } from "@packages/localization";
import { Button } from "@packages/ui/components/button";
import StickyNavbar from "@/components/StickyNavbar.astro";
import { supportedLanguages } from "@/i18n/config";
import Layout from "@/layouts/Landing.astro";
import Footer from "@/sections/Footer.astro";

export function getStaticPaths() {
   return supportedLanguages.map((locale) => ({
      params: { locale: locale === "pt-BR" ? undefined : locale },
   }));
}

const { locale } = Astro.params;
const lang = (locale || "pt-BR") as SupportedLng;

const relatedFeatures = [
   {
      description: "Vincule pagamentos de contas as transacoes automaticamente",
      href: "/features/smart-transactions",
      title: "Capture Cada Transacao",
   },
   {
      description: "Inclua contas no planejamento do orcamento",
      href: "/features/budgeting",
      title: "Orcamentos Que Realmente Funcionam",
   },
   {
      description: "Atribua contas aos membros da equipe",
      href: "/features/workspaces",
      title: "Compartilhe Financas Sem Compartilhar Tudo",
   },
   {
      description: "Metricas de pagamento de contas em analises",
      href: "/features/analytics",
      title: "Entenda Seu Dinheiro com Insights Reais",
   },
];

const testimonials = [
   {
      avatar: "https://api.dicebear.com/9.x/notionists/svg?seed=Marcus",
      name: "Marcus T.",
      quote: "Antes do Montte, eu tinha faturas de fornecedores espalhadas em e-mails e planilhas. Agora esta tudo em um so lugar com calculo automatico de juros. Nao perdemos nenhum prazo nos ultimos 6 meses.",
      role: "Empresario",
      tag: "Pequena Empresa",
   },
   {
      avatar: "https://api.dicebear.com/9.x/notionists/svg?seed=Riley",
      name: "Riley K.",
      quote: "Eu costumava controlar manualmente as faturas de clientes e minhas proprias contas. O sistema de lembretes e incrivel, recebo alertas 3 dias antes do vencimento. Zero pagamentos atrasados no ultimo ano.",
      role: "Consultor Autonomo",
      tag: "Autonomo",
   },
   {
      avatar: "https://api.dicebear.com/9.x/notionists/svg?seed=Morgan",
      name: "Morgan L.",
      quote: "Toda nossa equipe de contas a pagar usa o Montte. As regras de escalonamento garantem que a pessoa certa seja notificada no momento certo. Reduzimos nosso tempo de processamento de contas em 40%.",
      role: "Gerente Financeiro",
      tag: "Equipe",
   },
];

const faqs = [
   {
      answer:
         "Sim. Quando voce registra uma transacao de pagamento, ela e automaticamente vinculada a conta e marcada como paga.",
      question: "Posso vincular pagamentos de contas as transacoes reais?",
   },
   {
      answer:
         "Registre o pagamento parcial e o Montte atualiza o saldo restante. Voce pode pagar o restante depois.",
      question: "Como faco para registrar pagamentos parciais?",
   },
   {
      answer:
         "Sim. Configure regras de escalonamento para que os lembretes cheguem a pessoa certa no momento certo.",
      question: "Varias pessoas podem receber lembretes de contas?",
   },
   {
      answer:
         "Sim. Configure o padrao de recorrencia e ajuste o valor a cada ciclo de cobranca.",
      question:
         "Voces suportam contas recorrentes com valores variaveis (como contas de luz)?",
   },
   {
      answer:
         "Sim. Exporte para PDF/CSV ou visualize relatorios de fluxo de caixa integrados mostrando as obrigacoes.",
      question:
         "Posso gerar relatorios financeiros a partir dos dados de contas?",
   },
   {
      answer:
         "Suportamos exportacao em CSV. Planos Premium/Empresarial incluem integracoes avancadas com sistemas contabeis.",
      question: "O Montte integra com softwares de contabilidade?",
   },
];
---

<Layout lang={lang}>
   <div class="flex flex-col bg-background">
      <StickyNavbar lang={lang} />

      <!-- Hero Section -->
      <section class="relative mx-auto max-w-[1888px] w-full">
         <div class="absolute inset-0 bg-gradient-to-b from-primary/5 via-transparent to-transparent pointer-events-none" />

         <div class="container px-4 sm:px-6 pt-32 pb-10 md:pb-0 mx-auto flex flex-col items-center relative z-10">
            <h1 class="mt-5 md:mt-8 bg-gradient-to-b from-foreground to-foreground/60 bg-clip-text text-transparent font-medium text-center text-[36px] md:text-[66px] leading-[90%] max-w-[360px] md:max-w-[650px]">
               Controle completo de
               <span class="leading-[120%]">contas a pagar</span>
            </h1>
            <p class="mt-3 md:mt-5 text-center text-muted-foreground md:text-[20px] leading-[140%] max-w-[500px]">
               Acompanhe vencimentos, calcule juros automaticamente e nunca mais perca um pagamento.
            </p>

            <div class="px-3 sm:px-0">
               <div class="mt-10 w-full sm:w-auto">
                  <form class="flex flex-col sm:flex-row gap-3 items-center" action="/signup" method="get">
                     <input
                        autocomplete="email"
                        class="appearance-none px-5 border rounded-lg backdrop-blur-2xl h-12 w-full max-w-[316px] sm:max-w-full sm:w-[324px] border-border/20 bg-muted/10 placeholder:text-muted-foreground focus:outline-none focus:ring-2 focus:ring-primary/50"
                        name="email"
                        placeholder="Seu e-mail profissional"
                        required
                        type="email"
                     />
                     <Button type="submit" size="lg" className="h-12 w-full sm:w-auto max-w-[316px] px-6 rounded-lg font-medium whitespace-nowrap">
                        Comece em 30 segundos
                     </Button>
                  </form>
                  <p class="mt-5 pb-2 text-muted-foreground text-sm sm:text-base text-center">
                     Procurando uma solucao empresarial?{" "}
                     <a class="text-foreground underline underline-offset-4 transition decoration-muted-foreground/20 hover:decoration-foreground" href="/book-demo">
                        Agende uma demonstracao
                     </a>
                  </p>
               </div>
            </div>
         </div>

         <!-- Hero Images -->
         <div class="mt-10 mx-auto flex justify-center max-w-[1700px] sm:-mb-10">
            <img
               width="393"
               height="596"
               class="w-full sm:hidden -mt-14 -mb-24"
               alt="Painel de controle de contas a pagar no mobile"
               src="https://placehold.co/393x596/0f0f23/22c55e?text=Bill+Tracking+Mobile"
               loading="eager"
            />
            <img
               width="1730"
               height="662"
               class="hidden sm:block max-w-[800px] md:max-w-[1200px] lg:max-w-none"
               alt="Painel de controle de contas a pagar"
               src="https://placehold.co/1730x662/0f0f23/22c55e?text=Bill+Tracking+Dashboard"
               loading="eager"
            />
