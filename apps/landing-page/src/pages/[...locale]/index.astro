---
export const prerender = true;

import type { SupportedLng } from "@packages/localization";
import { supportedLanguages } from "@/i18n/config";

export function getStaticPaths() {
   return supportedLanguages.map((locale) => ({
      params: { locale: locale === "pt-BR" ? undefined : locale },
   }));
}

const { locale } = Astro.params;
const lang = (locale || "pt-BR") as SupportedLng;
---

<Layout lang={lang}>
   <div class="flex flex-col">
      <StickyNavbar lang={lang}/>
      <Hero lang={lang}/>
      <Showcase lang={lang}/>
      <BillTracking lang={lang}/>
      <Workspaces lang={lang}/>
      <Budgeting lang={lang}/>
      <Analytics lang={lang}/>
      <OpenSourceShowcase lang={lang}/>
      <Comparison lang={lang}/>
      <CTA />
      <SocialProof client:visible />
      <Footer lang={lang}/>
   </div>
</Layout>
