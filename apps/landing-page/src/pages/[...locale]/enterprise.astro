---
export const prerender = true;

import type { SupportedLng } from "@packages/localization";
import { supportedLanguages } from "@/i18n/config";

export function getStaticPaths() {
   return supportedLanguages.map((locale) => ({
      params: { locale: locale === "pt-BR" ? undefined : locale },
   }));
}

const { locale } = Astro.params;
const lang = (locale || "pt-BR") as SupportedLng;
---

<Layout lang={lang}>
   <div class="flex flex-col gap-2">
      <StickyNavbar lang={lang}/>

      <EnterpriseHero  />

      <!-- Performance Section -->
      <EnterprisePerformance  />
      <!-- Collaboration Section -->

       <Separator className="bg-gradient-to-r from-transparent via-primary/20 to-transparent"/>
       <EnterpriseCollaboration  />
       <Separator className="bg-gradient-to-r from-transparent via-primary/20 to-transparent"/>
       
       <EnterpriseSupport  />
       
       <Separator className="bg-gradient-to-r from-transparent via-primary/20 to-transparent"/>

       <EnterpriseOptimization  />

       <EnterpriseCosts  />

       <Separator className="bg-gradient-to-r from-transparent via-primary/20 to-transparent"/>
       <EnterpriseFAQ  />
      <CTA />
      <Footer lang={lang}/>
   </div>
</Layout>

