---
export const prerender = true;

import {
   ArrowRight,
   Building2,
   Check,
   ChevronDown,
   ChevronRight,
   Github,
   Headphones,
   Lock,
   Mail,
   Server,
   Shield,
   Zap,
} from "@lucide/astro";
import type { SupportedLng } from "@packages/localization";
import { supportedLanguages } from "@/i18n/config";
import StickyNavbar from "../../components/StickyNavbar.astro";
import Layout from "../../layouts/Landing.astro";
import Footer from "../../sections/Footer.astro";

export function getStaticPaths() {
   return supportedLanguages.map((locale) => ({
      params: { locale: locale === "pt-BR" ? undefined : locale },
   }));
}

const { locale } = Astro.params;
const lang = (locale || "pt-BR") as SupportedLng;

const trustedByLogos = [
   { name: "Startup A", initial: "SA" },
   { name: "Tech Corp", initial: "TC" },
   { name: "Finance Pro", initial: "FP" },
   { name: "Growth Inc", initial: "GI" },
   { name: "Scale Labs", initial: "SL" },
   { name: "Data Flow", initial: "DF" },
];

const collaborationFeatures = [
   { icon: "Shield", title: "Dados em seu controle" },
   { icon: "Lock", title: "SLA Garantido 99.9%" },
   { icon: "Check", title: "SOC 2 Type 2 (em progresso)" },
   { icon: "Shield", title: "GDPR Compliant" },
];

const supportFeatures = [
   {
      icon: "Clock",
      title: "Suporte 24/7",
      description:
         "Obtenha ajuda sempre que precisar. Nossos engenheiros de suporte estão prontos para auxiliar.",
   },
   {
      icon: "Headphones",
      title: "Migração sem stress",
      description:
         "Trabalhe com nossos especialistas e migre de sistemas legados complexos para o Montte.",
   },
];

const costComparison = [
   { name: "Datadog", price: "$870,000", percentage: 100 },
   { name: "ELK stack", price: "$128,000", percentage: 14.7 },
   { name: "Amazon CloudWatch", price: "$100,000", percentage: 11.5 },
];

const optimizationFeatures = [
   {
      icon: "Zap",
      title: "Escalabilidade confiável",
      description:
         "Processe milhares de transações por dia. Performance estável mesmo com picos de volume.",
   },
   {
      icon: "Shield",
      title: "Seguro e conformante",
      description:
         "Controle custos e uso enquanto gerencia armazenamento e acesso de dados. SOC 2, GDPR e mais.",
   },
   {
      icon: "Headphones",
      title: "Suporte especializado",
      description:
         "Nossa equipe técnica dedicada está aqui para ajudar. Do onboarding a otimizações. Sem bots.",
   },
];

const faqs = [
   {
      answer:
         "Contratos Enterprise começam em 12 meses com opções flexíveis de renovação. Também oferecemos cobrança trimestral para implantações maiores.",
      question: "Qual é o prazo mínimo de contrato?",
   },
   {
      answer:
         "Sim. Clientes Enterprise podem escolher entre nossa nuvem gerenciada, nuvem dedicada ou implantação on-premise. Todas as opções incluem todos os recursos enterprise.",
      question: "Podemos auto-hospedar a versão enterprise?",
   },
   {
      answer:
         "O preço Enterprise é baseado nas necessidades da sua organização - número de workspaces, nível de suporte e tipo de implantação. Entre em contato conosco para uma cotação personalizada.",
      question: "Como funciona o preço?",
   },
   {
      answer:
         "Estamos trabalhando ativamente em direção ao SOC 2 Tipo II e ISO 27001. Nossas práticas de segurança são sólidas - a documentação formal vem em seguida.",
      question: "Quais certificações vocês têm?",
   },
   {
      answer:
         "Sim. Oferecemos pilotos de 30-90 dias para clientes enterprise avaliarem o Montte com sua equipe antes de se comprometer.",
      question: "Vocês oferecem um programa piloto?",
   },
];
---

<Layout lang={lang}>
   <div class="flex flex-col enterprise-page">
      <StickyNavbar lang={lang}/>

      <!-- Hero Section -->
      <section class="relative z-10 mx-auto px-6 sm:px-10 flex flex-col items-center enterprise-hero-bg w-full max-w-[1520px] pt-32 sm:pt-40 pb-16">
         <p class="enterprise-title-gradient text-transparent text-sm sm:text-base uppercase font-bold text-center tracking-[0.29em]">
            Montte para empresas
         </p>

         <h1 class="mt-6 pb-2 enterprise-hero-text inline-block text-transparent font-semibold tracking-tight text-center text-[40px] sm:text-[56px] lg:text-[70px] leading-[103%] max-w-[800px]">
            Plataforma financeira para as melhores empresas
         </h1>

         <p class="mt-4 sm:text-lg md:text-xl text-center max-w-[350px] sm:max-w-[590px] text-muted-foreground">
            Dê à sua equipe as ferramentas para centralizar, proteger e simplificar suas finanças.
            Aumente a velocidade do time, redefina colaboração e otimize custos com Montte.
         </p>

         <a
            class="mt-10 flex items-center justify-center font-medium text-center gap-2 select-none border shadow-lg enterprise-demo-button w-[300px] h-[52px] text-base rounded-xl text-white transition hover:brightness-110"
            href="mailto:enterprise@montte.co"
         >
            <div class="w-8 h-8 rounded-full bg-primary/20 flex items-center justify-center">
               <Building2 class="w-4 h-4 text-primary" />
            </div>
            Agendar demo enterprise
            <ChevronRight class="w-4 h-4" />
         </a>
      </section>

      <!-- Trusted By Section -->
      <section class="py-12 container mx-auto flex flex-col items-center max-w-[1320px]">
         <p class="text-center text-base text-muted-foreground max-w-[200px] sm:max-w-none">
            Usado pelas melhores equipes de finanças
         </p>

         <div class="mt-8 flex flex-wrap justify-center gap-8 px-6 md:px-12 lg:px-16">
            {trustedByLogos.map((logo) => (
               <div class="flex items-center justify-center w-24 h-12 rounded-lg enterprise-card-bg border enterprise-border">
                  <span class="text-sm font-semibold text-muted-foreground">{logo.initial}</span>
               </div>
            ))}
         </div>

         <div class="mt-12 w-full enterprise-gradient-hr h-px"></div>
      </section>

      <!-- Performance Section -->
      <section class="py-16 md:py-24 container mx-auto flex flex-col items-center max-w-[951px] px-6">
         <p class="enterprise-title-gradient text-transparent text-sm sm:text-base uppercase font-bold text-center tracking-[0.045em]">
            Performance imbatível
         </p>

         <h2 class="mt-6 pb-2 enterprise-hero-text inline-block text-transparent font-semibold tracking-tight text-center leading-none text-[36px] md:text-[52px] max-w-[500px]">
            Gerencie finanças na velocidade que você quiser
         </h2>

         <p class="mt-4 text-lg md:text-xl text-center max-w-[500px] text-muted-foreground">
            Você define a velocidade. Obtenha respostas para questões financeiras mais rápido do que nunca
            e melhore rapidamente a tomada de decisões.
         </p>

         <div class="mt-12 lg:mt-16 w-full flex flex-col lg:flex-row gap-5">
            <div class="flex-1 border rounded-xl backdrop-blur-2xl flex flex-col-reverse sm:flex-row lg:flex-col-reverse sm:justify-end enterprise-card-bg enterprise-border">
               <div class="grow enterprise-lines-bg sm:mr-3 min-h-[120px]"></div>
               <div class="px-8 py-8 max-w-[350px]">
                  <p class="text-muted-foreground">Processe até</p>
                  <h3 class="mt-4 text-[32px] md:text-[44px] leading-[90%]">
                     <span class="enterprise-primary-gradient text-transparent">Milhares</span>
                     <br />
                     <span class="text-foreground">de transações por dia</span>
                  </h3>
                  <p class="mt-4 text-muted-foreground lg:-mr-8">
                     Infraestrutura otimizada para operações financeiras de alta escala.
                  </p>
               </div>
            </div>

            <div class="lg:flex-1 flex flex-col sm:flex-row lg:flex-col gap-5">
               <div class="flex-1 p-8 border rounded-xl backdrop-blur-2xl flex flex-col justify-end enterprise-card-bg enterprise-border">
                  <h4 class="mt-16 font-bold text-lg md:text-xl text-foreground leading-[124%]">Consultas rápidas = decisões rápidas</h4>
                  <p class="mt-2 text-muted-foreground">
                     Pare de esperar relatórios carregarem. Gaste mais tempo analisando
                     e menos esperando, mesmo com grandes volumes de dados.
                  </p>
               </div>
               <div class="flex-1 p-8 border rounded-xl backdrop-blur-2xl flex flex-col justify-end enterprise-card-bg enterprise-border">
                  <h4 class="mt-16 font-bold text-lg md:text-xl text-foreground leading-[124%]">Escalabilidade infinita, zero-config</h4>
                  <p class="mt-2 text-muted-foreground">
                     Escalamos tudo automaticamente. Pare de se preocupar com picos de uso
                     e aproveite performance ininterrupta.
                  </p>
               </div>
            </div>
         </div>

         <div class="mt-20 md:mt-24 w-full enterprise-gradient-hr h-px"></div>
      </section>

      <!-- Collaboration Section -->
      <section class="py-16 md:py-24 relative container mx-auto flex flex-col items-center max-w-[951px] px-6">
         <p class="enterprise-title-gradient text-transparent text-sm sm:text-base uppercase font-bold text-center tracking-[0.045em]">
            Trabalhe melhor em equipe
         </p>

         <h2 class="mt-6 pb-2 enterprise-hero-text inline-block text-transparent font-semibold tracking-tight text-center leading-none text-[36px] md:text-[52px] max-w-[520px]">
            Mais colaboração.
            <br />
            Menos complexidade.
         </h2>

         <p class="mt-4 text-lg md:text-xl text-center max-w-[520px] text-muted-foreground">
            Veja o que seus colegas estão trabalhando, comente e compartilhe relatórios.
            Gestão financeira moderna é um esporte coletivo.
         </p>

         <div class="mt-16 mx-0 sm:mx-10 md:mx-0 flex flex-col-reverse md:flex-row items-center gap-14 w-full">
            <div class="flex-1 enterprise-deployments-bg rounded-2xl max-w-[420px] overflow-hidden border enterprise-border">
               <div class="h-48 enterprise-card-image flex items-center justify-center">
                  <Server class="w-16 h-16 text-primary/50" />
               </div>
               <div class="p-8">
                  <p class="font-bold text-foreground text-lg">O que são implantações Enterprise?</p>
                  <p class="mt-4 text-muted-foreground">
                     Clientes enterprise usando Montte podem armazenar seus dados em suas próprias contas cloud.
                     Implantações enterprise estão disponíveis para todos os principais provedores.
                     <a class="underline text-primary hover:text-primary/80 transition-colors" href="mailto:enterprise@montte.co">Contate vendas</a> para mais detalhes.
                  </p>
               </div>
            </div>

            <div class="flex-1">
               <h3 class="font-bold text-foreground text-[32px] md:text-[36px] leading-[120%] tracking-[-0.01em]">
                  Mantenha seus dados na sua cloud.
               </h3>
               <p class="mt-4 text-lg md:text-xl max-w-[400px] text-muted-foreground">
                  Armazene todos os seus dados financeiros na sua conta cloud. Mantenha conformidade e controle com a plataforma Montte.
               </p>

               <a class="mt-6 group inline-flex items-center text-lg text-primary" href="#faq">
                  <span class="mr-2">Ver segurança e conformidade</span>
                  <ArrowRight class="w-4 h-4 transition-transform group-hover:translate-x-1" />
               </a>

               <div class="my-10 md:mt-16 w-full enterprise-gradient-hr h-px"></div>

               <div class="flex flex-col gap-6 text-foreground text-lg">
                  {collaborationFeatures.map((feature) => (
                     <div class="flex items-center gap-4">
                        <div class="w-11 h-11 rounded-lg bg-primary/10 flex items-center justify-center flex-shrink-0">
                           {feature.icon === "Shield" && <Shield class="w-5 h-5 text-primary" />}
                           {feature.icon === "Lock" && <Lock class="w-5 h-5 text-primary" />}
                           {feature.icon === "Check" && <Check class="w-5 h-5 text-primary" />}
                        </div>
                        <span>{feature.title}</span>
                     </div>
                  ))}
               </div>
            </div>
         </div>
      </section>

      <div class="w-full enterprise-gradient-hr h-px max-w-[951px] mx-auto"></div>

      <!-- Support Section -->
      <section class="py-16 md:py-24 relative container mx-auto flex flex-col items-center max-w-[951px] px-6">
         <p class="enterprise-title-gradient text-transparent text-sm sm:text-base uppercase font-bold text-center tracking-[0.045em]">
            Suporte técnico de concierge
         </p>

         <h2 class="mt-6 pb-2 enterprise-hero-text inline-block text-transparent font-semibold tracking-tight text-center leading-none text-[36px] md:text-[52px]">
            Suporte especializado de engenharia
         </h2>

         <p class="mt-4 text-lg md:text-xl text-center max-w-[600px] text-muted-foreground">
            Nossa equipe de suporte técnico dedicada está aqui para ajudar. Do onboarding e integração
            a otimizações e irregularidades. Sem bots, apenas engenheiros talentosos.
         </p>

         <div class="mt-12 grow flex flex-col md:flex-row gap-5 w-full">
            {supportFeatures.map((feature) => (
               <div class="flex-1 py-8 px-8 border rounded-xl enterprise-card-bg enterprise-border max-w-[420px] mx-auto md:mx-0">
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 32 32" fill="none">
                     {feature.icon === "Clock" && (
                        <path d="M16.0001 10.3333V16L19.6667 19.6666M28.3334 16C28.3334 22.8115 22.8116 28.3333 16.0001 28.3333C9.18857 28.3333 3.66675 22.8115 3.66675 16C3.66675 9.18845 9.18857 3.66663 16.0001 3.66663C22.8116 3.66663 28.3334 9.18845 28.3334 16Z" stroke="url(#enterprise-gradient)" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>
                     )}
                     {feature.icon === "Headphones" && (
                        <path d="M6.33341 13V12.6666C6.33341 7.69606 10.6613 3.66663 16.0001 3.66663C21.3388 3.66663 25.6667 7.69606 25.6667 12.6666V13M16.0001 26.1904V27C16.0001 27.7363 16.597 28.3333 17.3334 28.3333H20.0001C23.3138 28.3333 26.0001 25.647 26.0001 22.3333M5.66675 13H7.66675V21.6666H5.66675C4.56218 21.6666 3.66675 20.7712 3.66675 19.6666V15C3.66675 13.8954 4.56218 13 5.66675 13ZM24.3334 13H26.3334C27.438 13 28.3334 13.8954 28.3334 15V19.6666C28.3334 20.7712 27.438 21.6666 26.3334 21.6666H24.3334V13Z" stroke="url(#enterprise-gradient)" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>
                     )}
                     <defs>
                        <linearGradient id="enterprise-gradient" x1="16.0001" y1="3.66663" x2="36.66" y2="42.0007" gradientUnits="userSpaceOnUse">
                           <stop stop-color="#9AA4F1"></stop>
                           <stop offset="1" stop-color="#DBDFFA"></stop>
                        </linearGradient>
                     </defs>
                  </svg>
                  <div class="mt-5 font-semibold text-lg text-foreground">{feature.title}</div>
                  <p class="mt-2 text-muted-foreground">{feature.description}</p>
               </div>
            ))}
         </div>
      </section>

      <div class="w-full enterprise-gradient-hr h-px max-w-[951px] mx-auto"></div>

      <!-- Optimize Section -->
      <section class="container mx-auto px-6 sm:px-16 mb-12 md:mb-16 lg:mb-20 mt-16 lg:mt-24 flex flex-col items-center max-w-[983px]">
         <div class="uppercase text-sm sm:text-base font-bold leading-[121%] tracking-[0.045em]">
            <div class="enterprise-title-gradient text-transparent">Otimize custos</div>
         </div>

         <h3 class="my-6 enterprise-secondary-gradient text-transparent font-semibold text-center max-w-[600px] text-[36px] lg:text-[52px] leading-[108%] tracking-[-0.005em]">
            Amado por desenvolvedores, confiado por empresas
         </h3>

         <div class="mt-8 lg:mt-12 flex flex-col md:flex-row items-center md:items-start gap-10">
            {optimizationFeatures.map((feature) => (
               <div class="flex-1 max-w-[330px]">
                  <div class="flex">
                     <div class="shrink-0 pb-5 border-b-2 border-primary text-primary">
                        {feature.icon === "Zap" && <Zap class="w-6 h-6" />}
                        {feature.icon === "Shield" && <Shield class="w-6 h-6" />}
                        {feature.icon === "Headphones" && <Headphones class="w-6 h-6" />}
                     </div>
                     <div class="grow border-b enterprise-border-subtle"></div>
                  </div>
                  <p class="mt-5 text-foreground font-semibold lg:text-lg">{feature.title}</p>
                  <p class="mt-3 text-muted-foreground">{feature.description}</p>
               </div>
            ))}
         </div>
      </section>

      <!-- Cost Comparison Section -->
      <section class="mb-10 px-6 flex justify-center">
         <div class="p-3 flex flex-col md:flex-row border rounded-2xl max-w-[1008px] w-full enterprise-border enterprise-card-bg">
            <div class="enterprise-costs-bg rounded-xl px-8 py-6 flex flex-col max-w-[488px]">
               <div class="mb-8 grow flex flex-col justify-center">
                  <h3 class="font-semibold text-[26px] md:text-[32px] leading-[120%] tracking-[-0.01em]">
                     <div class="enterprise-primary-gradient text-transparent">Reduza custos.</div>
                     <div class="enterprise-secondary-gradient text-transparent">Otimize investimento em tech.</div>
                  </h3>
                  <p class="my-5 max-w-[365px] text-muted-foreground">
                     Criamos economias significativas através de arquitetura moderna,
                     open-source e uma pipeline de dados customizada.
                     Passamos as economias para você.
                  </p>
                  <a class="-m-1 p-1 group inline-flex items-center text-primary" href="/pricing">
                     <span class="mr-2">Ver preços</span>
                     <ArrowRight class="w-4 h-4 transition-transform group-hover:translate-x-1" />
                  </a>
               </div>
               <p class="pt-5 border-t enterprise-border-subtle text-[11px] leading-[145%] text-muted-foreground">
                  * Aproximação apenas. Custos precisos dependem da implementação.
               </p>
            </div>

            <div class="pt-6 md:py-6 flex-1">
               <div class="px-6 md:px-12">
                  <div class="text-sm text-muted-foreground">Comparação de exemplo</div>
                  <div class="text-foreground font-semibold">Logging 200TB/mês, retido por 30 dias</div>
               </div>

               <div class="my-6 w-full enterprise-gradient-hr h-px"></div>

               {costComparison.map((item, index) => (
                  <>
                     <div class="px-6 md:px-12">
                        <div class="flex items-center gap-3">
                           <div class="shrink-0 w-4 h-4 rounded bg-muted/30 flex items-center justify-center">
                              <span class="text-[8px] text-muted-foreground font-bold">{item.name.charAt(0)}</span>
                           </div>
                           <div class="text-foreground font-medium">{item.name}</div>
                        </div>
                        <div class="mt-3 rounded-full enterprise-progress-bg p-[1px]">
                           <div
                              class="h-2 rounded-full enterprise-progress-gradient"
                              style={`width: ${item.percentage}%`}
                           ></div>
                        </div>
                        <div class="text-sm mt-1 text-muted-foreground">
                           {item.price}/mês
                        </div>
                     </div>
                     {index < costComparison.length - 1 && (
                        <div class="my-5 w-full enterprise-gradient-hr h-px"></div>
                     )}
                  </>
               ))}

               <div class="mt-6 mx-4 md:mx-8 px-6 py-4 enterprise-montte-gradient shrink-0 rounded-xl">
                  <div class="flex justify-between items-center gap-5">
                     <div class="flex items-center gap-3">
                        <div class="shrink-0 w-4 h-4 flex items-center justify-center">
                           <svg width="15" height="12" viewBox="0 0 15 12" fill="none" class="text-foreground">
                              <path d="M7.5 0L15 12H0L7.5 0Z" fill="currentColor"/>
                           </svg>
                        </div>
                        <div class="font-medium text-foreground">Montte</div>
                     </div>
                     <div class="hidden sm:flex px-3 py-1 rounded-full text-xs border items-center enterprise-badge">
                        Usuários ilimitados
                     </div>
                  </div>
                  <div class="mt-3 rounded-full enterprise-montte-progress-border p-[1px]">
                     <div class="h-2 rounded-full w-[5.7%] enterprise-montte-progress"></div>
                  </div>
                  <div class="text-sm mt-1 text-muted-foreground">
                     $50,000/mês
                  </div>
               </div>
            </div>
         </div>
      </section>

      <!-- Trusted By Section (repeated) -->
      <section class="py-12 container mx-auto flex flex-col items-center max-w-[1320px]">
         <p class="text-center text-base text-muted-foreground max-w-[200px] sm:max-w-none">
            Usado pelas melhores equipes de finanças
         </p>

         <div class="mt-8 flex flex-wrap justify-center gap-8 px-6 md:px-12 lg:px-16">
            {trustedByLogos.map((logo) => (
               <div class="flex items-center justify-center w-24 h-12 rounded-lg enterprise-card-bg border enterprise-border">
                  <span class="text-sm font-semibold text-muted-foreground">{logo.initial}</span>
               </div>
            ))}
         </div>

         <div class="mt-12 w-full enterprise-gradient-hr h-px"></div>
      </section>

      <!-- FAQ Section -->
      <section id="faq" class="py-16 md:py-24 container mx-auto flex flex-col items-center max-w-[951px] px-6">
         <h2 class="text-2xl font-semibold md:text-3xl text-foreground text-center">
            FAQ Enterprise
         </h2>

         <div class="mt-12 max-w-3xl mx-auto space-y-4 w-full">
            {faqs.map((faq) => (
               <details class="group p-6 rounded-2xl enterprise-card-bg border enterprise-border hover:border-primary/30 transition-all">
                  <summary class="flex items-center justify-between cursor-pointer list-none">
                     <h3 class="font-semibold text-foreground pr-4">{faq.question}</h3>
                     <ChevronDown class="w-5 h-5 text-muted-foreground flex-shrink-0 transition-transform group-open:rotate-180" />
                  </summary>
                  <p class="mt-4 text-muted-foreground">{faq.answer}</p>
               </details>
            ))}
         </div>
      </section>

      <!-- Final CTA Section -->
      <section class="py-20 md:py-28 lg:py-36 enterprise-cta-bg">
         <div class="container mx-auto flex flex-col items-center px-6">
            <div class="flex items-center gap-2 mb-4">
               <svg width="154" height="21" viewBox="0 0 154 21" fill="none" class="text-foreground scale-75 md:scale-100">
                  <text x="0" y="17" fill="currentColor" font-size="20" font-weight="bold" font-family="system-ui, sans-serif">Montte</text>
               </svg>
            </div>

            <h2 class="mt-2 md:mt-4 font-bold text-foreground text-center text-[28px] md:text-[44px] lg:text-[56px] leading-[98%]">
               Sua gestão financeira evolui hoje
            </h2>

            <p class="mt-5 text-center md:text-lg text-muted-foreground max-w-[400px] md:max-w-[500px]">
               Montte permite que você veja dentro de qualquer operação financeira, resolva qualquer problema
               e tome decisões com confiança.
            </p>

            <div class="mt-8 flex flex-col sm:flex-row gap-4">
               <a
                  class="flex items-center justify-center font-medium text-center gap-2 select-none border shadow-lg enterprise-cta-button w-[280px] sm:w-auto h-[52px] px-6 text-base rounded-xl transition hover:brightness-110"
                  href="mailto:enterprise@montte.co"
