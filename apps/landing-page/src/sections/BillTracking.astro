---
import type { SupportedLng } from "@packages/localization";
import { FeatureCarousel } from "@/components/feature-carousel";

interface Props {
   lang?: SupportedLng;
}

const { lang: _lang = "pt-BR" } = Astro.props;

// Rebranding: Foco em "Fluxo de Caixa", "Previsibilidade" e "Gestão de Passivos"
const billFeatures = [
   {
      title: "Centralização de Compromissos",
      description:
         "Tenha uma visão unificada de todas as obrigações financeiras. Filtre por fornecedor, categoria ou centro de custo em um único dashboard.",
      // Cores ajustadas para o tema Dark Navy
      image: "https://placehold.co/350x478/151925/22c55e?text=Timeline+de+Pagamentos",
      width: "narrow" as const,
   },
   {
      title: "Parcelamentos Complexos",
      description:
         "Empréstimos, financiamentos ou compras parceladas? Gerencie amortizações com valores variáveis e datas personalizadas sem gambiarras.",
      image: "https://placehold.co/725x478/151925/22c55e?text=Gest%C3%A3o+de+Parcelas",
      width: "wide" as const,
   },
   {
      title: "Assinaturas e Recorrências",
      description:
         "Automatize o lançamento de custos fixos (Aluguel, SaaS, Folha). Configure a frequência uma vez e deixe o sistema projetar o futuro.",
      image: "https://placehold.co/350x478/151925/22c55e?text=SaaS+e+Recorr%C3%AAncia",
      width: "narrow" as const,
   },
   {
      title: "Motor de Juros e Multas",
      description:
         "Vai atrasar? O sistema recaucula automaticamente o valor atualizado da dívida baseado nas regras de juros compostos ou simples que você definir.",
      image: "https://placehold.co/725x478/151925/22c55e?text=C%C3%A1lculo+de+Juros+Auto",
      width: "wide" as const,
   },
   {
      title: "Radar de Vencimentos",
      description:
         "Receba alertas proativos antes que o boleto vença. Evite o desperdício de dinheiro com multas por esquecimento.",
      image: "https://placehold.co/350x478/151925/22c55e?text=Notifica%C3%A7%C3%B5es+Push",
      width: "narrow" as const,
   },
];
---

<section id="bills" class="py-16 md:py-24 overflow-hidden relative">

   <div class="absolute bottom-0 left-0 w-[500px] h-[500px] bg-primary/5 blur-[120px] rounded-full pointer-events-none"></div>

   <FeatureCarousel
      client:load
      label="Gestão de Passivos"
      title="Domine suas obrigações financeiras."
      description="Previsibilidade é poder. Saiba exatamente quanto vai sair do seu caixa nos próximos meses e elimine gastos desnecessários com multas."
      ctaText="Ver ferramentas de planejamento"
      ctaHref="#planning"
      benefitStatement="Proteja seu fluxo de caixa contra surpresas e juros abusivos."
      items={billFeatures as any}
   />
</section>
