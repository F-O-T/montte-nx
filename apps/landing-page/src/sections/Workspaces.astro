---
import type { SupportedLng } from "@packages/localization";
import { FeatureCarousel } from "@/components/feature-carousel";

interface Props {
   lang?: SupportedLng;
}

const { lang: _lang = "pt-BR" } = Astro.props;

const workspaceFeatures = [
   {
      title: "Múltiplos Workspaces (CNPJs)",
      description:
         "Isolamento total de dados. Gerencie sua Holding, sua Empresa e sua Vida Pessoal em ambientes separados, sem misturar o caixa.",
      image: "https://placehold.co/350x478/151925/22c55e?text=Multi-Tenant+Switch",
      width: "narrow" as const,
   },
   {
      title: "Gestão de Time & Convites",
      description:
         "Pare de compartilhar sua senha. Convide sócios, assistentes financeiros ou contadores via e-mail com credenciais únicas e seguras.",
      image: "https://placehold.co/725x478/151925/22c55e?text=Team+Management+UI",
      width: "wide" as const,
   },
   {
      title: "Permissões Granulares (RBAC)",
      description:
         "Controle absoluto. Defina quem pode apenas 'Ver', quem pode 'Editar' e quem é 'Admin'. Proteja dados sensíveis como Pró-labore e Salários.",
      image: "https://placehold.co/350x478/151925/22c55e?text=Roles+%26+Permissions",
      width: "narrow" as const,
   },
   {
      title: "Contexto & Auditoria",
      description:
         "Elimine o 'ping-pong' de e-mails. Comente diretamente na transação, marque o responsável e resolva dúvidas de conciliação no próprio sistema.",
      image: "https://placehold.co/725x478/151925/22c55e?text=Transaction+Comments",
      width: "wide" as const,
   },
   {
      title: "Segurança de Sessão",
      description:
         "Painel de segurança ativo. Monitore quais dispositivos acessaram a conta e encerre sessões suspeitas remotamente com um clique.",
      image: "https://placehold.co/350x478/151925/22c55e?text=Security+Logs",
      width: "narrow" as const,
   },
];
---

<section id="workspaces" class="py-16 md:py-24 overflow-hidden relative">


   <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[800px] h-[500px] bg-primary/5 blur-[120px] rounded-full pointer-events-none"></div>

   <FeatureCarousel
      client:load
      label="Governança e Acessos"
      title="Delegue o operacional. Mantenha o controle."
      description="Segurança empresarial para times de qualquer tamanho. Trabalhe com seu contador e sócios na mesma plataforma, com regras claras de acesso."
      ctaText="Ver planos para equipes"
      ctaHref="#pricing"
      benefitStatement="O fim do compartilhamento de senhas e planilhas inseguras."
      items={workspaceFeatures as any}
   />
</section>
