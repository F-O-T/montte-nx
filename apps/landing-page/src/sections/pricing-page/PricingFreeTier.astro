---
import { Check } from "@lucide/astro";

const freeFeatures = [
   "Lançamentos e Contas Ilimitadas",
   "Conciliação Bancária (OFX)",
   "Categorias e Tags Personalizáveis",
   "Dashboard de Visão Mensal",
   "Segurança de Nível Bancário",
   "50 MB para Comprovantes/Anexos",
   "Acesso Mobile e Desktop",
];
---

<!-- FREE TIER SUMMARY -->
<section class="rounded-xl border border-border bg-gradient-to-b from-card to-background overflow-hidden shadow-sm">
   <div class="p-6 md:p-8 flex flex-col md:flex-row md:items-center justify-between gap-6">
      <div>
         <div class="flex items-center gap-2 mb-2">
            <h2 class="text-foreground text-xl font-bold">Ideal para Gestão Pessoal</h2>
            <span class="px-2 py-0.5 rounded-full bg-primary/10 text-primary text-xs font-medium">Para sempre</span>
         </div>
         <div class="flex items-baseline gap-2 mb-1">
            <span class="text-foreground text-5xl font-bold tracking-tighter">R$0</span>
             <span class="text-sm text-muted-foreground">/mês vitalício</span>
          </div>
          <p class="text-sm text-muted-foreground">Sem cartão de crédito necessário.</p>
       </div>
       <a href="https://app.montte.co/auth/sign-up" class="shrink-0 inline-flex items-center justify-center px-6 py-3 rounded-lg bg-foreground text-background font-medium hover:bg-foreground/90 transition-all hover:scale-105 shadow-lg shadow-foreground/5">
          Criar Conta Gratuita
       </a>
   </div>
   <div class="border-t border-dashed border-border px-6 md:px-8 py-6 bg-muted/20">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4 text-sm">
         {freeFeatures.map((feature) => (
            <div class="flex items-center gap-2">
               <Check class="size-4 text-primary shrink-0" />
               <span class="text-muted-foreground">{feature}</span>
            </div>
         ))}
         <div class="flex items-center gap-2 text-muted-foreground/60 italic">
            <Check class="size-4 shrink-0 opacity-50" />
            <span>Open Source</span>
         </div>
      </div>
   </div>
</section>
