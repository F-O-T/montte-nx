---
import { Check, Zap, ArrowRight } from "@lucide/astro";
import { Card, CardContent } from "@packages/ui/components/card";
import { Table, TableBody, TableRow, TableCell } from "@packages/ui/components/table";
import { Button } from "@packages/ui/components/button";

const automationFeatures = {
   title: "Automação e Produtividade",
   description:
      "Elimine o trabalho manual repetitivo. Crie fluxos inteligentes que organizam suas finanças automaticamente enquanto você foca no negócio.",
   included: {
      label: "Incluso em todos os planos",
      value: "5 fluxos de automação",
   },
   addons: [
      { name: "Fluxos e regras ilimitadas", price: "Add-on R$12/mês", isAddon: true },
      { name: "Alertas externos (E-mail/Push)", price: "Incluso", isAddon: false },
      { name: "Lógica avançada multicritério", price: "Incluso", isAddon: false },
   ],
   features: [
      "Editor Visual Intuitivo (Arrastar e Soltar)",
      "Gatilhos automáticos por transação",
      "Condicionais avançadas (E/OU)",
      "Regras por valor, conta ou descrição",
      "Categorização automática de lançamentos",
      "Etiquetagem (Tags) dinâmica",
      "Atribuição automática de Centro de Custo",
      "Padronização e limpeza de descrições",
      "Notificações Push em tempo real",
      "Disparo de e-mails transacionais",
      "Auditoria e Histórico de Execuções",
   ],
};
---

<!-- AUTOMATION SECTION -->
<section id="automation" class="scroll-mt-24">
   <h2 class="text-foreground text-3xl font-bold mb-2">{automationFeatures.title}</h2>
   <p class="text-muted-foreground mb-8 max-w-2xl">{automationFeatures.description}</p>

   <!-- Pricing Table -->
   <Card className="mb-8 py-0 overflow-hidden">
      <Table>
         <TableBody>
            <TableRow className="bg-muted/30">
               <TableCell className="font-medium text-foreground py-4 px-6">{automationFeatures.included.label}</TableCell>
               <TableCell className="text-right text-sm font-medium text-primary py-4 px-6">{automationFeatures.included.value}</TableCell>
            </TableRow>
            {automationFeatures.addons.map((addon, index) => (
               <TableRow className={index < automationFeatures.addons.length - 1 ? "border-dashed" : "border-0"}>
                  <TableCell className="py-4 px-6">
                     <div class="flex items-center gap-2">
                        <Zap class="size-4 text-primary" />
                        <span class="text-sm">{addon.name}</span>
                     </div>
                  </TableCell>
                  <TableCell className={`text-right text-sm py-4 px-6 ${addon.isAddon ? "text-primary font-medium" : "text-muted-foreground"}`}>
                     {addon.price}
                  </TableCell>
               </TableRow>
            ))}
         </TableBody>
      </Table>
   </Card>

   <!-- Features Grid -->
   <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 text-sm mb-6">
      {automationFeatures.features.map((feature) => (
         <div class="flex items-center gap-2">
            <Check class="size-4 text-primary shrink-0" />
            <span class="text-muted-foreground">{feature}</span>
         </div>
      ))}
   </div>

   <!-- Enterprise CTA -->
   <Card className="border-dashed bg-muted/20 py-4">
      <CardContent className="flex items-center justify-between py-0">
         <p class="text-sm text-muted-foreground">
            <span class="font-medium text-foreground">Para empresas:</span> automações ilimitadas já inclusas no plano Enterprise.
         </p>
         <Button asChild variant="link" className="shrink-0 text-primary p-0 h-auto">
            <a href="/enterprise">
               Ver Enterprise
               <ArrowRight class="size-3" />
            </a>
         </Button>
      </CardContent>
   </Card>
</section>
