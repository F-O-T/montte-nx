---
import { ArrowRight } from "@lucide/astro";
import type { SupportedLng } from "@packages/localization";
import { Button } from "@packages/ui/components/button";

interface _Props {
   lang?: SupportedLng;
}

const { lang: _lang = "pt-BR" } = Astro.props;
---

<section class="py-8 sm:py-16 lg:py-24">
   <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="text-card-foreground flex flex-col gap-6 relative overflow-hidden rounded-3xl border-none bg-foreground py-12 shadow-md sm:py-16 lg:py-24">
         <div class="absolute inset-0 overflow-hidden">
            <div class="absolute -top-24 -left-24 size-64 rounded-full bg-primary/20 blur-3xl"></div>
            <div class="absolute -bottom-24 -right-24 size-64 rounded-full bg-chart-2/20 blur-3xl"></div>
            <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 size-96 rounded-full bg-chart-3/10 blur-3xl"></div>
         </div>
         
         <div class="px-8 sm:px-16 lg:px-24 relative z-10">
            <div class="flex flex-col items-center text-center gap-8 max-w-3xl mx-auto">
               <div class="space-y-4">
                  <p class="text-5xl sm:text-6xl lg:text-7xl font-bold text-background">
                     Comece Agora
                  </p>
                  <p class="text-lg sm:text-xl font-medium text-background/80 max-w-xl mx-auto">
                     Pronto para ter controle total das suas financas? Comece agora gratuitamente e descubra como e facil organizar sua vida financeira.
                  </p>
               </div>
               
               <div class="flex flex-wrap items-center justify-center gap-4">
                  <a
                     href="https://app.montte.co/auth/sign-up"
                     target="_blank"
                     rel="noopener noreferrer"
                  >
                     <Button size="lg" className="rounded-full bg-background text-foreground hover:bg-background/90 text-base h-12 px-8 group">
                        Criar conta gratis
                        <ArrowRight class="size-4 ml-2 transition-transform duration-300 group-hover:translate-x-1" />
                     </Button>
                  </a>
                  <a
                     href="https://github.com/F-O-T/montte-nx"
                     target="_blank"
                     rel="noopener noreferrer"
                  >
                     <Button variant="outline" size="lg" className="rounded-full border-background/30 text-background hover:bg-background/10 text-base h-12 px-8">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="size-4 mr-2"><path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"/><path d="M9 18c-4.51 2-5-2-7-2"/></svg>
                        Ver no GitHub
                     </Button>
                  </a>
               </div>
               
               <div class="flex items-center gap-8 text-background/60 text-sm">
                  <div class="flex items-center gap-2">
                     <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="size-4"><path d="M20 6 9 17l-5-5"/></svg>
                     <span>Gratis no Alpha</span>
                  </div>
                  <div class="flex items-center gap-2">
                     <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="size-4"><path d="M20 6 9 17l-5-5"/></svg>
                     <span>Open Source</span>
                  </div>
                  <div class="flex items-center gap-2">
                     <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="size-4"><path d="M20 6 9 17l-5-5"/></svg>
                     <span>Self-host gratis</span>
                  </div>
               </div>
            </div>
         </div>
      </div>
   </div>
</section>
