---
import type { SupportedLng } from "@packages/localization";

interface Props {
   lang?: SupportedLng;
}

const { lang: _lang = "pt-BR" } = Astro.props;
---

<section class="min-h-screen" id="hero">
   <div class="max-w-7xl px-4 sm:px-6 pb-24 md:pb-48 mx-auto flex flex-col md:flex-row">
      <div class="flex-1 z-30 pt-24 md:pt-32 text-center md:text-left">
         <div class="flex md:hidden w-full justify-center mb-6">
            <span class="text-2xl font-bold text-primary">Montte</span>
         </div>

         <h1 class="text-foreground mt-5 hero-heading-gradient font-medium md:mt-8 max-w-[520px] mx-auto md:mx-0 pb-2 text-[36px] md:text-[50px] leading-[110%]">
            <span>Controle financeiro open-source sob seu comando</span>
         </h1>

         <p class="mt-4 md:mt-2 text-muted-foreground md:text-[20px] max-md:text-center max-w-[480px] mx-auto md:mx-0">
            Rastreamento inteligente de despesas com workspaces colaborativos.
            <br class="hidden md:block" />
            Com uma fracao da complexidade.
         </p>

         <div class="mt-8 w-full sm:w-auto">
            <div class="flex flex-col sm:flex-row gap-3 items-center justify-center md:justify-start">
               <a href="/signup" class="w-full max-w-[316px] sm:max-w-none sm:w-auto">
                  <Button size="lg" className="group relative overflow-hidden rounded-xl h-[52px] px-6 w-full sm:w-auto">
                     <span>Comece Gratis</span>
                     <ArrowRight class="size-4 transition-transform duration-300 group-hover:translate-x-1" />
                  </Button>
               </a>
               <a href="https://github.com/montte/montte" target="_blank" rel="noopener noreferrer" class="w-full max-w-[316px] sm:max-w-none sm:w-auto">
                  <Button variant="outline" size="lg" className="rounded-xl h-[52px] px-6 gap-2 w-full sm:w-auto border-border/50 bg-background/10 backdrop-blur-sm">
                     <Github class="size-5" />
                     Auto-Hospede
                  </Button>
               </a>
            </div>

            <div class="w-full flex justify-center md:justify-start md:pl-1">
               <p class="mt-6 text-sm text-muted-foreground max-md:max-w-[315px] max-md:text-center">
                  100% gratuito e open-source. Hospede no seu servidor.
                  <br class="max-md:hidden" />
                  Propriedade total dos dados. Sem dependencia de fornecedor.
               </p>
            </div>
         </div>

         <div class="mt-10 max-w-[480px] mx-auto md:mx-0">
         </div>
      </div>

      <div class="flex-1 flex items-center justify-end relative flex-col mt-12 md:mt-0 sm:min-h-[450px] md:min-h-[550px]">
         <div class="sm:absolute w-full sm:w-[600px] md:w-[700px] lg:w-[800px] md:-left-12 sm:-top-6 md:top-8">
            <HeroCarousel client:load />
         </div>
      </div>
   </div>
</section>

