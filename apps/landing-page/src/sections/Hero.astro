---
import { ArrowRight, CheckCircle2, ChevronRight, Github } from "@lucide/astro";
import type { SupportedLng } from "@packages/localization";
import { Button } from "@packages/ui/components/button";
import HeroCarousel from "../components/HeroCarousel";

interface Props {
   lang?: SupportedLng;
}

const { lang: _lang = "pt-BR" } = Astro.props;
---

<section class="min-h-screen relative overflow-hidden" id="hero">
   <!-- Efeito de fundo sutil (Glow) para dar profundidade -->
   <div class="absolute top-[-10%] left-[-10%] w-[500px] h-[500px] bg-primary/5 blur-[100px] rounded-full pointer-events-none"></div>

   <div class="max-w-7xl px-4 sm:px-6 pb-24 md:pb-48 mx-auto flex flex-col md:flex-row relative z-10">
      <div class="flex-1 z-30 pt-24 md:pt-36 text-center md:text-left">

         <!-- Mobile Brand Label -->
         <div class="flex md:hidden w-full justify-center mb-8">
            <span class="text-xl font-bold tracking-tight text-foreground flex items-center gap-2">
               <span class="w-2 h-2 rounded-full bg-primary"></span>
               Montte
            </span>
         </div>

         <!-- Badge de Novidade/Open Source -->
         <div class="flex justify-center md:justify-start mb-6">
            <a href="https://github.com/montte/montte" target="_blank" class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-muted/50 border border-border/60 hover:border-primary/40 hover:bg-muted/80 transition-all group cursor-pointer">
               <span class="flex h-1.5 w-1.5 rounded-full bg-emerald-500 animate-pulse"></span>
               <span class="text-xs font-medium text-muted-foreground group-hover:text-foreground">Open Source & Self-Hosted</span>
               <ChevronRight class="size-3 text-muted-foreground group-hover:text-primary transition-colors" />
            </a>
         </div>

         <!-- Headline: Foco em Poder e Transparência -->
         <h1 class="text-foreground hero-heading-gradient font-bold tracking-tight max-w-[600px] mx-auto md:mx-0 pb-2 text-[40px] md:text-[64px] leading-[110%]">
            Domine suas finanças. <br />
            <span class="text-muted-foreground/60">Sem caixas-pretas.</span>
         </h1>

         <!-- Subheadline: Foco na dor (complexidade) vs solução (simplicidade) -->
         <p class="mt-6 text-muted-foreground text-lg md:text-[20px] leading-relaxed max-md:text-center max-w-[500px] mx-auto md:mx-0">
            A plataforma que une a governança empresarial com a simplicidade que você ama. Automatize o caos e tenha previsibilidade real.
         </p>

         <!-- Buttons Area -->
         <div class="mt-10 w-full sm:w-auto">
            <div class="flex flex-col sm:flex-row gap-4 items-center justify-center md:justify-start">
               <a href="/signup" class="w-full max-w-[316px] sm:max-w-none sm:w-auto">
                  <Button size="lg" className="group relative overflow-hidden rounded-xl h-[56px] px-8 w-full sm:w-auto bg-primary text-primary-foreground hover:bg-primary/90 shadow-lg shadow-primary/20 transition-all hover:scale-[1.02]">
                     <span class="font-semibold text-base">Criar Conta Grátis</span>
                     <ArrowRight class="ml-2 size-4 transition-transform duration-300 group-hover:translate-x-1" />
                  </Button>
               </a>
               <a href="https://github.com/montte/montte" target="_blank" rel="noopener noreferrer" class="w-full max-w-[316px] sm:max-w-none sm:w-auto">
                  <Button variant="outline" size="lg" className="rounded-xl h-[56px] px-6 gap-2 w-full sm:w-auto border-border bg-background/50 hover:bg-muted/50 backdrop-blur-sm transition-all hover:text-foreground">
                     <Github class="size-5" />
                     <span class="font-medium">Star on GitHub</span>
                  </Button>
               </a>
            </div>

            <!-- Trust / Tech Stack Micro-copy -->
            <div class="w-full flex justify-center md:justify-start md:pl-1 mt-8">
               <div class="flex flex-wrap items-center justify-center md:justify-start gap-x-6 gap-y-2 text-sm text-muted-foreground/60">
                  <div class="flex items-center gap-1.5">
                     <CheckCircle2 class="size-3.5 text-emerald-500/80" /> Sem cartão de crédito
                  </div>
                  <div class="flex items-center gap-1.5">
                     <CheckCircle2 class="size-3.5 text-emerald-500/80" /> Dados criptografados
                  </div>
                  <div class="flex items-center gap-1.5">
                     <CheckCircle2 class="size-3.5 text-emerald-500/80" /> Exportação total
                  </div>
               </div>
            </div>
         </div>
      </div>

      <!-- Right Side: Carousel / Visual -->
      <div class="flex-1 flex items-center justify-end relative flex-col mt-16 md:mt-0 sm:min-h-[450px] md:min-h-[550px]">
         <!-- Efeito de luz atrás do carousel -->
         <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[120%] h-[120%] bg-gradient-to-tr from-primary/10 via-transparent to-transparent blur-3xl rounded-full pointer-events-none"></div>

         <div class="sm:absolute w-full sm:w-[600px] md:w-[700px] lg:w-[850px] md:-left-12 sm:-top-6 md:top-12 z-20">
            <HeroCarousel client:load />
         </div>
      </div>
   </div>
</section>
