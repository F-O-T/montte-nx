---
import { ArrowRight, Check } from "@lucide/astro";
import type { SupportedLng } from "@packages/localization";
import { Badge } from "@packages/ui/components/badge";
import { Button } from "@packages/ui/components/button";

interface _Props {
   lang?: SupportedLng;
}

const { lang: _lang = "pt-BR" } = Astro.props;

const features = [
   "Importacao de extratos OFX",
   "Categorizacao inteligente",
   "Relatorios detalhados",
];
---

<main class="overflow-hidden" id="hero">
   <section class="relative flex-1">
      <div class="relative flex flex-col py-12 sm:py-16 lg:py-24">
         <div class="mx-auto grid max-w-7xl grid-cols-1 gap-12 px-4 max-xl:justify-center sm:gap-16 sm:px-6 lg:gap-24 lg:px-8 xl:grid-cols-2">
            <div class="flex flex-col justify-between gap-8">
               <div class="flex flex-col gap-8">
                  <div class="flex flex-col justify-between gap-4">
                     <div class="flex flex-wrap items-center gap-2">
                        <Badge variant="outline" className="text-foreground font-normal">
                           Controle Financeiro Pessoal
                        </Badge>
                        <Badge className="bg-amber-500/10 text-amber-600 dark:text-amber-400 border-amber-500/20 hover:bg-amber-500/20 font-medium animate-pulse">
                           Alpha
                        </Badge>
                     </div>
                     <div>
                        <h1 class="text-2xl font-semibold sm:text-3xl lg:text-5xl">
                           Organize suas financas de forma simples e inteligente
                        </h1>
                     </div>
                     <div>
                        <p class="text-muted-foreground text-xl">
                           Gerencie contas, categorize transacoes, importe extratos OFX e tenha uma visao completa da sua vida financeira em um so lugar.
                        </p>
                     </div>
                     <div class="flex flex-wrap items-center gap-4">
                        <a href="https://app.montte.co/auth/sign-up" target="_blank" rel="noopener noreferrer">
                           <Button size="lg" className="group relative overflow-hidden rounded-lg">
                              <span>Comecar agora</span>
                              <ArrowRight class="size-4 transition-transform duration-300 group-hover:translate-x-1"/>
                           </Button>
                        </a>
                        <a href="#features">
                           <Button variant="ghost" size="lg" className="rounded-lg bg-primary/10 text-primary hover:bg-primary/20">
                              Saiba mais
                           </Button>
                        </a>
                     </div>
                  </div>
                  <div class="space-y-4 ps-2">
                     {features.map((feature) => (
                        <div class="flex items-center gap-3">
                           <div class="flex size-5 items-center justify-center rounded-full bg-primary/10">
                              <Check class="size-3 text-primary" />
                           </div>
                           <p class="text-muted-foreground">{feature}</p>
                        </div>
                     ))}
                  </div>
               </div>
            </div>
            <div class="flex items-center justify-center">
               <div class="relative max-xl:max-w-135 md:mt-8 md:ml-3 md:grow">
                  <div class="w-fit -rotate-6">
                     <div class="pointer-events-none absolute inset-0 h-full w-full scale-105 transform-gpu blur-xl opacity-30 bg-gradient-to-br from-primary/50 via-chart-2/50 to-chart-3/50 rounded-2xl"></div>
                     <div class="bg-card text-card-foreground flex flex-col rounded-xl border py-6 shadow-lg gap-4 relative w-full max-w-sm">
                        <div class="px-6 flex justify-between items-start">
                           <div class="flex flex-col gap-1">
                              <span class="text-xl font-semibold">Visao Geral</span>
                              <span class="text-muted-foreground text-sm">Suas financas em tempo real</span>
                           </div>
                           <div class="bg-primary/10 text-primary p-2 rounded-lg">
                              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="size-5">
                                 <path d="M3 3v16a2 2 0 0 0 2 2h16"/>
                                 <path d="m19 9-5 5-4-4-3 3"/>
                              </svg>
                           </div>
                        </div>
                        <div class="px-6">
                           <div class="h-px w-full bg-border"></div>
                        </div>
                        <div class="px-6 flex flex-col gap-4">
                           <div class="flex items-baseline gap-2">
                              <span class="text-3xl font-semibold">R$ 12.450</span>
                              <span class="text-primary text-sm font-medium">+12.5%</span>
                           </div>
                           <div class="flex gap-4">
                              <div class="flex-1">
                                 <div class="text-muted-foreground text-xs mb-1">Receitas</div>
                                 <div class="h-2 bg-primary/20 rounded-full overflow-hidden">
                                    <div class="h-full bg-primary rounded-full" style="width: 75%"></div>
                                 </div>
                              </div>
                              <div class="flex-1">
                                 <div class="text-muted-foreground text-xs mb-1">Despesas</div>
                                 <div class="h-2 bg-destructive/20 rounded-full overflow-hidden">
                                    <div class="h-full bg-destructive rounded-full" style="width: 45%"></div>
                                 </div>
                              </div>
                           </div>
                        </div>
                        <div class="px-6 pt-2 flex justify-between items-center">
                           <span class="text-muted-foreground text-sm">Saldo atual</span>
                           <Button variant="outline" size="sm" className="rounded-full h-7 text-xs">
                              Ver detalhes
                           </Button>
                        </div>
                     </div>
                  </div>
                  <div class="ms-auto -mt-32 rotate-3 md:w-fit translate-x-16 sm:translate-x-24">
                     <div class="pointer-events-none absolute inset-0 h-full w-full scale-105 transform-gpu blur-xl opacity-30 bg-gradient-to-br from-chart-4/50 via-primary/50 to-chart-1/50 rounded-2xl"></div>
                     <div class="bg-card text-card-foreground flex flex-col rounded-xl border py-6 shadow-lg gap-4 relative ms-auto w-full max-w-xs">
                        <div class="px-6 flex items-center gap-3">
                           <div class="size-10 rounded-full bg-primary/10 flex items-center justify-center">
                              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="size-5 text-primary">
                                 <rect width="20" height="14" x="2" y="5" rx="2"/>
                                 <line x1="2" x2="22" y1="10" y2="10"/>
                              </svg>
                           </div>
                           <div class="flex flex-col">
                              <span class="font-medium">Conta Principal</span>
                              <span class="text-muted-foreground text-sm">Banco do Brasil</span>
                           </div>
                        </div>
                        <div class="px-6">
                           <div class="h-px w-full bg-border"></div>
                        </div>
                        <div class="px-6">
                           <div class="flex justify-between items-center mb-3">
                              <span class="text-muted-foreground text-sm">Transacoes recentes</span>
                              <span class="text-xs text-muted-foreground">Hoje</span>
                           </div>
                           <div class="space-y-3">
                              <div class="flex items-center justify-between">
                                 <div class="flex items-center gap-2">
                                    <div class="size-8 rounded-full bg-destructive/10 flex items-center justify-center">
                                       <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="size-4 text-destructive">
                                          <path d="m3 16 4 4 4-4"/>
                                          <path d="M7 20V4"/>
                                          <path d="m21 8-4-4-4 4"/>
                                          <path d="M17 4v16"/>
                                       </svg>
                                    </div>
                                    <span class="text-sm">Supermercado</span>
                                 </div>
                                 <span class="text-sm font-medium text-destructive">-R$ 234</span>
                              </div>
                              <div class="flex items-center justify-between">
                                 <div class="flex items-center gap-2">
                                    <div class="size-8 rounded-full bg-primary/10 flex items-center justify-center">
                                       <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="size-4 text-primary">
                                          <path d="m3 8 4-4 4 4"/>
                                          <path d="M7 4v16"/>
                                          <path d="m21 16-4 4-4-4"/>
                                          <path d="M17 20V4"/>
                                       </svg>
                                    </div>
                                    <span class="text-sm">Salario</span>
                                 </div>
                                 <span class="text-sm font-medium text-primary">+R$ 5.200</span>
                              </div>
                           </div>
                        </div>
                     </div>
                  </div>
               </div>
            </div>
         </div>
         <div class="absolute inset-y-0 flex items-center justify-center right-0 -z-10 h-full w-1/2 max-xl:hidden overflow-hidden">
            <svg class="pointer-events-none absolute z-0 h-full w-full opacity-60" width="644" height="864" viewBox="0 0 644 864" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
               <title>Background beams decoration</title>
               <g>
                  <path d="M298.018 510.471C343.224 474.034 402.278 467.033 446.057 492.921L562.934 562.032L679.811 631.143C723.59 657.031 782.645 650.03 827.851 613.593L948.536 516.319" stroke="var(--border)" stroke-linecap="round" stroke-linejoin="round"/>
