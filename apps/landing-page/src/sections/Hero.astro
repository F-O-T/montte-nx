                  <path d="M228.849 462.519L306.486 330.402C330.637 289.302 374.435 264.408 421.055 265.282L570.92 268.091L720.784 270.9C767.404 271.774 811.202 246.881 835.353 205.781L912.99 73.6634" stroke="var(--border)" stroke-linecap="round" stroke-linejoin="round"/>
                  <path d="M219.228 439.691L303.106 299.889C325.76 262.132 365.219 238.241 408.281 236.211L564.661 228.836L714.808 221.756C761.252 219.566 803.222 191.991 824.678 149.571L894.042 12.4309" stroke="var(--border)" stroke-linecap="round" stroke-linejoin="round"/>
                  <path d="M223.848 503.803L314.106 380.909C342.438 342.332 388.829 322.05 435.32 327.914L583.424 346.596L731.528 365.278C778.019 371.142 824.409 350.86 852.742 312.283L943 189.389" stroke="var(--border)" stroke-linecap="round" stroke-linejoin="round"/>
               </g>
               <path d="M298.018 510.471C343.224 474.034 402.278 467.033 446.057 492.921L562.934 562.032L679.811 631.143C723.59 657.031 782.645 650.03 827.851 613.593L948.536 516.319" stroke="url(#heroGrad0)" stroke-opacity="0.8" stroke-width="2" stroke-linecap="round"/>
               <path d="M313.947 477.805C355.656 440.949 410.618 429.982 453.979 449.864L579.079 507.225L700.639 570.201C746.256 593.833 806.293 581.706 849.853 540.06L965.934 429.082" stroke="url(#heroGrad1)" stroke-opacity="0.8" stroke-width="2" stroke-linecap="round"/>
               <path d="M287.785 548.818C335.829 517.199 394.936 516.755 435.89 547.705L547.664 632.177L655.638 702.257C703.089 733.056 769.488 724.604 816.491 681.783L942.724 566.781" stroke="url(#heroGrad2)" stroke-opacity="0.8" stroke-width="2" stroke-linecap="round"/>
               <path d="M226.743 485.26L310.181 357.131C336.244 317.107 381.266 294.249 427.893 297.365L577.162 307.344L726.431 317.322C773.058 320.439 818.08 297.58 844.143 257.557L927.581 129.427" stroke="url(#heroGrad3)" stroke-opacity="0.8" stroke-width="2" stroke-linecap="round"/>
               <path d="M223.848 503.803L314.106 380.909C342.438 342.332 388.829 322.05 435.32 327.914L583.424 346.596L731.528 365.278C778.019 371.142 824.409 350.86 852.742 312.283L943 189.389" stroke="url(#heroGrad4)" stroke-opacity="0.8" stroke-width="2" stroke-linecap="round"/>
               <defs>
                  <linearGradient id="heroGrad0" x1="0%" x2="100%" y1="0%" y2="100%">
                     <stop stop-color="var(--primary)" stop-opacity="0"/>
                     <stop offset="50%" stop-color="var(--primary)"/>
                     <stop offset="100%" stop-color="var(--chart-2)" stop-opacity="0"/>
                  </linearGradient>
                  <linearGradient id="heroGrad1" x1="0%" x2="100%" y1="0%" y2="100%">
                     <stop stop-color="var(--chart-2)" stop-opacity="0"/>
                     <stop offset="50%" stop-color="var(--chart-2)"/>
                     <stop offset="100%" stop-color="var(--primary)" stop-opacity="0"/>
                  </linearGradient>
                  <linearGradient id="heroGrad2" x1="0%" x2="100%" y1="0%" y2="100%">
                     <stop stop-color="var(--primary)" stop-opacity="0"/>
                     <stop offset="50%" stop-color="var(--chart-3)"/>
                     <stop offset="100%" stop-color="var(--chart-2)" stop-opacity="0"/>
                  </linearGradient>
                  <linearGradient id="heroGrad3" x1="0%" x2="100%" y1="0%" y2="100%">
                     <stop stop-color="var(--chart-4)" stop-opacity="0"/>
                     <stop offset="50%" stop-color="var(--primary)"/>
                     <stop offset="100%" stop-color="var(--chart-3)" stop-opacity="0"/>
                  </linearGradient>
                  <linearGradient id="heroGrad4" x1="0%" x2="100%" y1="0%" y2="100%">
                     <stop stop-color="var(--chart-2)" stop-opacity="0"/>
                     <stop offset="50%" stop-color="var(--chart-4)"/>
                     <stop offset="100%" stop-color="var(--primary)" stop-opacity="0"/>
                  </linearGradient>
               </defs>
            </svg>
         </div>
      </div>
   </section>
</main>
