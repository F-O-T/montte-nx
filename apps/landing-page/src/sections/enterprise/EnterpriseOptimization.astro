---
interface OptimizationFeature {
   icon: string;
   title: string;
   description: string;
}

interface Props {
   features?: OptimizationFeature[];
}

const defaultFeatures: OptimizationFeature[] = [
   {
      icon: "Zap",
      title: "Escalabilidade confiável",
      description:
         "Processe milhares de transações por dia. Performance estável mesmo com picos de volume.",
   },
   {
      icon: "Shield",
      title: "Seguro e conformante",
      description:
         "Controle custos e uso enquanto gerencia armazenamento e acesso de dados. SOC 2, GDPR e mais.",
   },
   {
      icon: "Headphones",
      title: "Suporte especializado",
      description:
         "Nossa equipe técnica dedicada está aqui para ajudar. Do onboarding a otimizações. Sem bots.",
   },
];

const { features = defaultFeatures } = Astro.props;
---

<section  class="relative px-8 py-18 md:py-28 flex flex-col gap-12 items-center container max-w-6xl mx-auto overflow-hidden">
     <div class="flex flex-col gap-12 items-center z-10">

    <p class=" text-sm text-primary  uppercase font-bold text-center tracking-widest">
      Otimize custos
         </p>

   <h3 class="
 inline-block font-semibold tracking-tight text-center text-3xl md:text-5xl leading-tight max-w-3xl text-foreground
      ">
               Decisões em tempo real, não dias depois

         </h3>

   </div>



  <div class=" flex flex-col md:flex-row items-center md:items-start gap-10">
    {features.map((feature) => (
      <div class="flex-1  flex flex-col gap-6">
      <div class="flex flex-col items-start gap-4">
          <div class="text-primary">
            {feature.icon === "Zap" && <Zap class="w-6 h-6" />}
            {feature.icon === "Shield" && <Shield class="w-6 h-6" />}
            {feature.icon === "Headphones" && <Headphones class="w-6 h-6" />}
        </div>
        <Separator className="bg-primary" />
        </div>
        <p class=" text-foreground font-semibold lg:text-lg">{feature.title}</p>
        <p class=" text-muted-foreground">{feature.description}</p>
      </div>
    ))}
  </div>
</section>

