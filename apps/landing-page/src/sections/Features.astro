---
import type { SupportedLng } from "@packages/localization";
import { FeaturesTabs } from "../components/features-tabs";
import Logo from "../components/Logo.astro";

interface Props {
   lang?: SupportedLng;
}

const { lang: _lang = "pt-BR" } = Astro.props;
---

<section id="features" class="py-8 sm:py-16 lg:py-24">
   <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="mb-6 flex items-center justify-between gap-9 max-sm:flex-col">
         <div class="max-w-3xl">
            <h2 class="mb-4 text-2xl font-semibold md:text-3xl lg:text-4xl">
               Funcionalidades que voce precisa
            </h2>
            <p class="text-muted-foreground text-xl">
               Descubra um conjunto de funcionalidades essenciais para gerenciar suas financas. 
               Importe extratos, categorize transacoes e acompanhe sua evolucao financeira com relatorios detalhados.
            </p>
         </div>
         <div class="mx-auto flex">
            <div class="relative flex size-36 items-center justify-center">
               <div class="absolute inset-0 flex items-center justify-center z-10">
                  <div class="bg-background rounded-3xl p-2">
                     <Logo size={96} />
                  </div>
               </div>
               <div class="absolute inset-0">
                  <div class="border-primary absolute inset-12 animate-ping rounded-3xl border-2 opacity-75"></div>
                  <div class="border-primary/60 absolute inset-8 animate-ping rounded-3xl border-2 opacity-50" style="animation-delay: 0.2s"></div>
                  <div class="border-primary/40 absolute inset-6 animate-ping rounded-3xl border-2 opacity-25" style="animation-delay: 0.4s"></div>
               </div>
            </div>
         </div>
      </div>
      <FeaturesTabs client:load />
   </div>
</section>
