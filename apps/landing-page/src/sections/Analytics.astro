---
import type { SupportedLng } from "@packages/localization";
import { FeatureCarousel } from "@/components/feature-carousel";

interface Props {
   lang?: SupportedLng;
}

const { lang: _lang = "pt-BR" } = Astro.props;

const analyticsFeatures = [
   {
      description:
         "Veja receitas vs. despesas ao longo do tempo. Identifique padrões sazonais e tendências.",
      image: "https://placehold.co/350x478/0f0f23/22c55e?text=Fluxo+de+Caixa",
      title: "Análise de Fluxo de Caixa",
      width: "narrow" as const,
   },
   {
      description:
         "Acompanhe a progressão do patrimônio líquido. Observe seu patrimônio crescer (ou identifique problemas cedo).",
      image: "https://placehold.co/725x478/0f0f23/22c55e?text=Evolu%C3%A7%C3%A3o+Patrimonial",
      title: "Dashboard de Evolução Financeira",
      width: "wide" as const,
   },
   {
      description:
         "Compare valores orçados com gastos reais. Meça a precisão das previsões.",
      image: "https://placehold.co/350x478/0f0f23/22c55e?text=Previsto+vs+Real",
      title: "Análise Previsto vs. Realizado",
      width: "narrow" as const,
   },
   {
      description:
         "Estatísticas de pagamentos em dia vs. atrasados. Melhore a disciplina de pagamentos.",
      image: "https://placehold.co/725x478/0f0f23/22c55e?text=M%C3%A9tricas+de+Pagamento",
      title: "Métricas de Performance de Pagamentos",
      width: "wide" as const,
   },
   {
      description:
         "Aprofunde-se nos gastos por categoria, tag ou centro de custo. Identifique para onde seu dinheiro realmente vai.",
      image: "https://placehold.co/350x478/0f0f23/22c55e?text=An%C3%A1lise+por+Categoria",
      title: "Análise por Categoria e Centro de Custo",
      width: "narrow" as const,
   },
];
---

<section id="analytics" class="py-16 md:py-24 overflow-hidden">
   <FeatureCarousel
      client:load
      label="Relatórios e Análises Financeiras"
      title="Entenda Seu Dinheiro com Insights Reais"
      description="Relatórios bonitos e interativos que revelam o que realmente está acontecendo com suas finanças."
      ctaText="Explorar recursos"
      ctaHref="#features"
      benefitStatement="Veja padrões de gastos. Identifique tendências. Tome decisões baseadas em dados."
      items={analyticsFeatures}
   />
</section>
