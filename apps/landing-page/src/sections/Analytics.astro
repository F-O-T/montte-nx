---
import type { SupportedLng } from "@packages/localization";
import { FeatureCarousel } from "@/components/feature-carousel";

interface Props {
   lang?: SupportedLng;
}

const { lang: _lang = "pt-BR" } = Astro.props;

const analyticsFeatures = [
   {
      title: "DRE Gerencial Automático",
      description:
         "Gere a Demonstração do Resultado do Exercício em um clique. Visualize Receita Bruta, Deduções, Custos Variáveis e Margem de Contribuição sem planilhas.",
      image: "https://placehold.co/350x478/151925/22c55e?text=DRE+Gerencial",
      width: "narrow" as const,
   },
   {
      title: "Saúde do Caixa & Burn Rate",
      description:
         "Monitore a liquidez da empresa em tempo real. Entenda seu Runway (tempo de vida do caixa) e a taxa de queima de capital (Burn Rate) para crescer com segurança.",
      image: "https://placehold.co/725x478/151925/22c55e?text=Cash+Flow+Dashboard",
      width: "wide" as const,
   },
   {
      title: "Análise de Variância (YTD)",
      description:
         "Compare o Orçado vs. Realizado acumulado no ano (Year-to-Date). Identifique quais centros de custo estão drenando a lucratividade.",
      image: "https://placehold.co/350x478/151925/22c55e?text=Budget+Variance",
      width: "narrow" as const,
   },
   {
      title: "Aging de Contas (Inadimplência)",
      description:
         "Relatórios de envelhecimento de contas a pagar e receber. Saiba quem te deve, há quanto tempo e qual o impacto disso no seu capital de giro.",
      image: "https://placehold.co/725x478/151925/22c55e?text=Aging+Report",
      width: "wide" as const,
   },
   {
      title: "Drill-Down Granular",
      description:
         "Viu um número estranho no gráfico? Clique e aprofunde-se (Drill-down) até chegar na transação e no comprovante original que gerou aquele dado.",
      image: "https://placehold.co/350x478/151925/22c55e?text=Category+Drill-down",
      width: "narrow" as const,
   },
];
---

<section id="analytics" class="py-16 md:py-24 overflow-hidden relative">

   <div class="absolute top-0 left-1/2 -translate-x-1/2 w-[900px] h-[400px] bg-primary/5 blur-[120px] rounded-full pointer-events-none"></div>

   <FeatureCarousel
      client:load
      label="Business Intelligence"
      title="Inteligência Financeira, não apenas gráficos."
      description="Abandone a intuição. Tome decisões baseadas em relatórios financeiros de padrão corporativo, gerados automaticamente em tempo real."
      ctaText="Ver todos os relatórios"
      ctaHref="#features"
      benefitStatement="Transforme dados brutos em estratégias de crescimento e lucro."
      items={analyticsFeatures as any}
   />
</section>
