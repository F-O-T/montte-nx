---
import type { SupportedLng } from "@packages/localization";
import { FeatureCarousel } from "@/components/feature-carousel";

interface Props {
   lang?: SupportedLng;
}

const { lang: _lang = "pt-BR" } = Astro.props;

// Rebranding: Foco em "Governança" e "Produtividade"
const transactionFeatures = [
   {
      title: "Input Ultra-rápido",
      description:
         "Esqueça a burocracia. Lance gastos em segundos pelo celular ou desktop com atalhos inteligentes de teclado.",
      // Placeholder ajustado para o tema Dark Navy
      image: "https://placehold.co/350x478/151925/22c55e?text=Mobile+UI+Dark",
      width: "narrow" as const,
   },
   {
      title: "Rateio de Custos (Split)",
      description:
         "Uma única compra, múltiplos centros de custo. Divida o valor de uma nota fiscal entre categorias diferentes para uma DRE precisa.",
      image: "https://placehold.co/725x478/151925/22c55e?text=Split+Categories+View",
      width: "wide" as const,
   },
   {
      title: "Compliance & Auditoria",
      description:
         "Anexe NFs, recibos e contratos diretamente na transação. Mantenha-se protegido contra a malha fina e auditorias.",
      image: "https://placehold.co/350x478/151925/22c55e?text=Receipt+Scanning",
      width: "narrow" as const,
   },
   {
      title: "Conciliação Inteligente",
      description:
         "O algoritmo identifica transferências entre contas automaticamente, evitando que você conte o mesmo dinheiro duas vezes.",
      image: "https://placehold.co/725x478/151925/22c55e?text=Auto-Match+Algorithm",
      width: "wide" as const,
   },
   {
      title: "Conectividade Universal",
      description:
         "Importe extratos OFX de qualquer banco brasileiro ou use nossa API para injetar transações do seu sistema legado.",
      image: "https://placehold.co/350x478/151925/22c55e?text=Bank+Sync+OFX",
      width: "narrow" as const,
   },
];
---

<section id="transactions" class="py-16 md:py-24 overflow-hidden relative">

   <!-- Elemento decorativo de fundo (opcional, para unir com a hero) -->
   <div class="absolute top-0 right-0 w-[500px] h-[500px] bg-primary/5 blur-[120px] rounded-full pointer-events-none"></div>

   <FeatureCarousel
      client:load
      label="Operação Financeira"
      title="O fim da digitação manual."
      description="Transações são o átomo do seu financeiro. O Montte garante que elas sejam capturadas, categorizadas e auditadas automaticamente."
      ctaText="Ver todas as features"
      ctaHref="#features"
      benefitStatement="Sua contabilidade fechada em tempo recorde."
      items={transactionFeatures as any}
   />
</section>
