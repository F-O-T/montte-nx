---
import type { SupportedLng } from "@packages/localization";
import { FeatureCarousel } from "@/components/feature-carousel";

interface Props {
   lang?: SupportedLng;
}

const { lang: _lang = "pt-BR" } = Astro.props;

const transactionFeatures = [
   {
      description:
         "Registre receitas, despesas e transferências em segundos. Funciona no desktop e mobile.",
      image: "https://placehold.co/350x478/0f0f23/22c55e?text=Lan%C3%A7amento",
      title: "Lançamento Inteligente de Transações",
      width: "narrow" as const,
   },
   {
      description:
         "Divida uma única transação entre múltiplas categorias. Um recibo, organização perfeita.",
      image: "https://placehold.co/725x478/0f0f23/22c55e?text=Dividir+Categorias",
      title: "Categorização Dividida",
      width: "wide" as const,
   },
   {
      description:
         "Faça upload e armazene recibos com segurança (PDF, Imagens). Nunca mais perca um documento.",
      image: "https://placehold.co/350x478/0f0f23/22c55e?text=Recibos",
      title: "Anexos de Recibos",
      width: "narrow" as const,
   },
   {
      description:
         "Vinculação inteligente de transferências entre contas. Detecte entradas duplicadas automaticamente.",
      image: "https://placehold.co/725x478/0f0f23/22c55e?text=Correspond%C3%AAncia",
      title: "Correspondência Automática de Transferências",
      width: "wide" as const,
   },
   {
      description:
         "Importe extratos bancários diretamente. Sincronização em tempo real. Zero entrada manual.",
      image: "https://placehold.co/350x478/0f0f23/22c55e?text=Importa%C3%A7%C3%A3o+OFX",
      title: "Integração com Banco (OFX)",
      width: "narrow" as const,
   },
];
---

<section id="transactions" class="py-16 md:py-24 overflow-hidden">
   <FeatureCarousel
      client:load
      label="Gestão Inteligente de Transações"
      title="Capture Cada Transação. Automaticamente."
      description="Transações são a base da clareza financeira. Montte torna capturá-las sem esforço."
      ctaText="Explorar recursos"
      ctaHref="#features"
      benefitStatement="Rastreie cada centavo sem entrada manual de dados."
      items={transactionFeatures as any}
   />
</section>
