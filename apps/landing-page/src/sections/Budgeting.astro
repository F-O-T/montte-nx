---
import type { SupportedLng } from "@packages/localization";
import { FeatureCarousel } from "@/components/feature-carousel";

// biome-ignore lint/correctness/noUnusedVariables: Used by Astro template
interface Props {
   lang?: SupportedLng;
}

const { lang: _lang = "pt-BR" } = Astro.props;

const budgetFeatures = [
   {
      title: "Orçamento Multidimensional",
      description:
         "Defina tetos de gastos por Categoria, Projeto (Tag) ou Centro de Custo. Tenha controle granular sobre para onde o dinheiro está indo.",
      image: "https://placehold.co/350x478/151925/22c55e?text=Metas+por+Centro+de+Custo",
      width: "narrow" as const,
   },
   {
      title: "Rollover de Saldo",
      description:
         "Incentive a eficiência. Configure para que a verba não utilizada em um mês acumule automaticamente para o próximo período.",
      image: "https://placehold.co/725x478/151925/22c55e?text=Rollover+Logic",
      width: "wide" as const,
   },
   {
      title: "Alertas Preventivos",
      description:
         "Não espere o mês fechar para saber que estourou. Receba notificações visuais quando atingir 80% ou 100% da verba planejada.",
      image: "https://placehold.co/350x478/151925/22c55e?text=Alertas+de+Budget",
      width: "narrow" as const,
   },
   {
      title: "Análise Budget vs. Actual",
      description:
         "Compare o Planejado vs. Realizado em tempo real. Identifique desvios de rota instantaneamente e ajuste a estratégia.",
      image: "https://placehold.co/725x478/151925/22c55e?text=Relat%C3%B3rio+Previsto+vs+Real",
      width: "wide" as const,
   },
   {
      title: "Forecast & Projeções",
      description:
         "Baseado no seu histórico e nas metas atuais, o sistema projeta o fechamento do caixa antes do mês acabar.",
      image: "https://placehold.co/350x478/151925/22c55e?text=Trend+Forecasting",
      width: "narrow" as const,
   },
];
---

<section id="budgeting" class="py-16 md:py-24 overflow-hidden relative">

   <div class="absolute bottom-0 right-0 w-[600px] h-[600px] bg-primary/5 blur-[120px] rounded-full pointer-events-none"></div>

   <FeatureCarousel
      client:load
      label="Planejamento Estratégico"
      title="Transforme dados em estratégia."
      description="Pare de dirigir olhando para o retrovisor. Crie orçamentos dinâmicos que se adaptam à realidade do seu negócio e garantem a saúde financeira."
      ctaText="Ver recursos de análise"
      ctaHref="#analytics"
      benefitStatement="Defina metas. Acompanhe desvios. Garanta o lucro."
      items={budgetFeatures as any}
   />
</section>
