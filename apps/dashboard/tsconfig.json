{
   "extends": "@tooling/typescript/vite.json",
   "include": ["**/*.ts", "**/*.tsx"],
   "compilerOptions": {
      "declaration": false,
      "declarationMap": false,
      "types": ["vite/client", "vite-plugin-pwa/client"],
      "useDefineForClassFields": true,
      "lib": ["ES2022", "DOM", "DOM.Iterable", "WebWorker"],
      "module": "ESNext",
      "jsx": "react-jsx",
      "baseUrl": ".",
      "paths": {
         "@/*": ["./src/*"],
         "@packages/ui/*": ["../../packages/ui/src/*"]
      }
   }
}
