{
   "$schema": "https://json.schemastore.org/tsconfig",
   "extends": "./base.json",
   "compilerOptions": {
      "composite": true,
      "declaration": true,
      "declarationMap": true,
      "emitDeclarationOnly": true,
      "lib": ["dom", "ES2022"],
      "noEmit": false,
      "outDir": "${configDir}/dist",
      "rootDir": "${configDir}/src",
      "sourceMap": true,
      "tsBuildInfoFile": "${configDir}/.cache/lib.tsbuildinfo.json"
   }
}
